@model MotorShop.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 fade-in-up" style="min-height: 80vh;">
    <div class="card border-0 shadow-lg rounded-4 p-4 text-center" style="max-width: 500px; width: 100%; background: rgba(255,255,255,0.9); backdrop-filter: blur(20px);">

        <div class="mx-auto mb-4 d-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10 text-danger" style="width: 80px; height: 80px;">
            <i class="bi bi-exclamation-triangle-fill fs-1"></i>
        </div>

        <h3 class="fw-bolder text-dark mb-2">Xóa sản phẩm?</h3>
        <p class="text-muted mb-4">
            Bạn có chắc chắn muốn xóa sản phẩm <strong class="text-dark">@Model.Name</strong> không? <br>
            Hành động này <span class="text-danger fw-bold">không thể hoàn tác</span>.
        </p>

        <div class="bg-light rounded-3 p-3 mb-4 text-start d-flex gap-3 align-items-center border">
            <div class="rounded-3 bg-white border d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; overflow: hidden;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="w-100 h-100 object-fit-cover" />
                }
                else
                {
                    <i class="bi bi-box-seam text-muted fs-4"></i>
                }
            </div>
            <div>
                <div class="fw-bold text-dark">@Model.Name</div>
                <div class="small text-muted">SKU: @(Model.SKU ?? "---")</div>
                <div class="small text-primary fw-bold">@Model.Price.ToString("N0") ₫</div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-sm">
                    <i class="bi bi-trash3-fill me-2"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-light btn-lg rounded-pill fw-bold text-muted">Hủy bỏ</a>
            </div>
        </form>
    </div>
</div>