@model MotorShop.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Head {
    <style>
        /* Form Container Styles */
        .form-card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 30px;
            box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.6);
            height: 100%;
        }

        .section-header {
            font-size: 14px;
            font-weight: 800;
            text-transform: uppercase;
            color: #94a3b8;
            letter-spacing: 1px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .section-header i {
                font-size: 18px;
                color: #6366f1;
            }

        /* Neon Inputs */
        .input-neon {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 12px 16px;
            font-weight: 500;
            color: #334155;
            transition: all 0.3s ease;
        }

            .input-neon:focus {
                background: white;
                border-color: #8b5cf6;
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
                outline: none;
            }

        .form-label {
            font-size: 12px;
            font-weight: 700;
            color: #64748b;
            margin-bottom: 6px;
            display: block;
        }

        /* Image Preview Box */
        .img-upload-box {
            border: 2px dashed #cbd5e1;
            border-radius: 16px;
            background: #f1f5f9;
            height: 220px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            cursor: text;
            transition: all 0.2s;
            overflow: hidden;
            position: relative;
        }

            .img-upload-box:hover {
                border-color: #8b5cf6;
                background: #f5f3ff;
            }

            .img-upload-box img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }
    </style>
}

<div class="d-flex align-items-center gap-3 mb-4 animate-fade-up">
    <a asp-action="Index" class="btn btn-light rounded-circle shadow-sm d-grid place-items-center" style="width: 45px; height: 45px;">
        <i class="bi bi-arrow-left text-dark fs-5"></i>
    </a>
    <div>
        <h2 class="fw-bolder mb-0" style="color: #1e293b;">Tạo sản phẩm</h2>
        <span class="text-muted small">Điền thông tin chi tiết cho sản phẩm mới.</span>
    </div>
</div>

<form asp-action="Create" method="post" class="animate-fade-up delay-1">
    @Html.AntiForgeryToken()

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="form-card">
                <div class="section-header">
                    <i class="bi bi-card-text"></i> Thông tin chung
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Name" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control input-neon" placeholder="VD: Honda SH 150i ABS 2024" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SKU" class="form-label">Mã SKU</label>
                        <input asp-for="SKU" class="form-control input-neon" placeholder="Để trống để tự tạo" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Slug" class="form-label">SEO URL (Slug)</label>
                        <input asp-for="Slug" class="form-control input-neon" placeholder="tu-dong-tao-tu-ten" />
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Mô tả sản phẩm</label>
                        <textarea asp-for="Description" class="form-control input-neon" rows="6" placeholder="Nhập chi tiết sản phẩm..."></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="d-flex flex-column gap-4 h-100">

                <div class="form-card">
                    <div class="section-header">
                        <i class="bi bi-tags-fill text-warning"></i> Phân loại & Giá
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-select input-neon">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BrandId" class="form-label">Thương hiệu</label>
                        <select asp-for="BrandId" asp-items="ViewBag.BrandId" class="form-select input-neon">
                            <option value="">-- Chọn thương hiệu --</option>
                        </select>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <label asp-for="Price" class="form-label">Giá bán (VNĐ)</label>
                            <input asp-for="Price" class="form-control input-neon fw-bold text-primary" placeholder="0" />
                        </div>
                        <div class="col-6">
                            <label asp-for="OriginalPrice" class="form-label">Giá gốc</label>
                            <input asp-for="OriginalPrice" class="form-control input-neon text-muted" placeholder="0" />
                        </div>
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <label asp-for="StockQuantity" class="form-label">Tồn kho</label>
                            <input asp-for="StockQuantity" class="form-control input-neon" value="0" />
                        </div>
                        <div class="col-6">
                            <label asp-for="Year" class="form-label">Năm SX</label>
                            <input asp-for="Year" class="form-control input-neon" value="@DateTime.Now.Year" />
                        </div>
                    </div>
                </div>

                <div class="form-card flex-grow-1">
                    <div class="section-header">
                        <i class="bi bi-image-fill text-success"></i> Ảnh đại diện
                    </div>

                    <div class="mb-3">
                        <input asp-for="ImageUrl" class="form-control input-neon" id="imgInput" placeholder="Dán URL ảnh tại đây..." />
                    </div>

                    <div class="img-upload-box" onclick="document.getElementById('imgInput').focus()">
                        <div id="imgPreviewPlaceholder" class="text-center">
                            <i class="bi bi-cloud-arrow-up fs-1 text-muted opacity-50"></i>
                            <div class="text-muted small mt-2 fw-bold">Preview Ảnh</div>
                        </div>
                        <img id="imgPreview" src="" style="display:none;" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 mt-2">
            <div class="form-card py-3 d-flex align-items-center justify-content-between">
                <div class="d-flex gap-4 ps-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" checked style="cursor: pointer;">
                        <label class="form-check-label fw-bold small text-dark" for="IsActive">Đang kinh doanh</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsPublished" checked style="cursor: pointer;">
                        <label class="form-check-label fw-bold small text-dark" for="IsPublished">Hiển thị Web</label>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-light rounded-pill px-4 fw-bold">Hủy</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-lg"
                            style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border: none;">
                        <i class="bi bi-check2-circle me-2"></i> Lưu sản phẩm
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Preview ảnh khi nhập URL
        const imgInput = document.getElementById('imgInput');
        const imgPreview = document.getElementById('imgPreview');
        const placeholder = document.getElementById('imgPreviewPlaceholder');

        imgInput.addEventListener('input', function() {
            const url = this.value;
            if(url) {
                imgPreview.src = url;
                imgPreview.style.display = 'block';
                placeholder.style.display = 'none';
            } else {
                imgPreview.style.display = 'none';
                placeholder.style.display = 'block';
            }
        });
    </script>
}