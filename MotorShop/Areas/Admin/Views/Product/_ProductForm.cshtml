@model Product
<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div class="sm:col-span-2">
        <label asp-for="Name" class="block text-sm font-medium text-gray-700">Tên sản phẩm *</label>
        <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
        <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
    </div>
    <div>
        <label asp-for="SKU" class="block text-sm font-medium text-gray-700">Mã SKU</label>
        <input asp-for="SKU" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm font-mono" />
    </div>
    <div>
        <label asp-for="Price" class="block text-sm font-medium text-gray-700">Giá bán *</label>
        <input asp-for="Price" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
    </div>
    <div>
        <label asp-for="StockQuantity" class="block text-sm font-medium text-gray-700">Tồn kho</label>
        <input asp-for="StockQuantity" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
    </div>
    <div>
        <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700">Danh mục</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option value="">-- Chọn danh mục --</option>
        </select>
    </div>
    <div>
        <label asp-for="BrandId" class="block text-sm font-medium text-gray-700">Thương hiệu</label>
        <select asp-for="BrandId" asp-items="ViewBag.BrandId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option value="">-- Chọn thương hiệu --</option>
        </select>
    </div>
    <div class="sm:col-span-2">
        <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700">URL Hình ảnh</label>
        <input asp-for="ImageUrl" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
    </div>
    <div class="flex items-center gap-2">
        <input asp-for="IsActive" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
        <label asp-for="IsActive" class="text-sm font-medium text-gray-900">Đang kinh doanh</label>
    </div>
</div>