@model MotorShop.Models.Shipper
@{
    ViewData["Title"] = "Thêm đơn vị vận chuyển";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Head {
    <style>
        .form-center-glass {
            max-width: 600px;
            margin: 2rem auto;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 20px 60px -10px rgba(249, 115, 22, 0.15); /* Orange Shadow */
            border: 1px solid white;
        }

        .input-glass {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            padding: 14px 20px;
            font-weight: 600;
            color: #334155;
            transition: 0.3s;
        }

            .input-glass:focus {
                background: white;
                border-color: #f97316;
                box-shadow: 0 0 0 4px rgba(249, 115, 22, 0.1);
                outline: none;
            }

        .form-label-neon {
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #94a3b8;
            margin-bottom: 8px;
            display: block;
            margin-left: 4px;
        }

        .switch-card {
            background: white;
            border: 1px solid #f1f5f9;
            border-radius: 16px;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
}

<div class="container fade-in-up">
    <div class="d-flex align-items-center gap-3 mb-3" style="max-width: 600px; margin: 0 auto;">
        <a asp-action="Index" class="btn btn-light rounded-circle shadow-sm d-grid place-items-center" style="width: 45px; height: 45px;">
            <i class="bi bi-arrow-left text-dark fs-5"></i>
        </a>
        <span class="text-muted fw-bold small text-uppercase">Quay lại danh sách</span>
    </div>

    <div class="form-center-glass">
        <div class="text-center mb-5">
            <div class="d-inline-flex p-3 rounded-4 mb-3 text-white shadow-lg" style="background: linear-gradient(135deg, #f97316 0%, #fbbf24 100%);">
                <i class="bi bi-truck fs-2"></i>
            </div>
            <h2 class="fw-bolder mb-1 h-value text-dark">Đối tác mới</h2>
            <p class="text-muted small">Thêm đơn vị vận chuyển vào hệ thống.</p>
        </div>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="row g-3 mb-4">
                <div class="col-md-8">
                    <label asp-for="Name" class="form-label-neon">Tên đơn vị <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control input-glass" placeholder="VD: Giao Hàng Nhanh" autofocus />
                    <span asp-validation-for="Name" class="text-danger small fw-bold mt-1 d-block ps-2"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Code" class="form-label-neon">Mã (Code)</label>
                    <input asp-for="Code" class="form-control input-glass text-uppercase font-monospace" placeholder="GHN" />
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Phone" class="form-label-neon">Hotline hỗ trợ</label>
                <input asp-for="Phone" class="form-control input-glass" placeholder="1900 xxxx..." />
            </div>

            <div class="mb-4">
                <label asp-for="Note" class="form-label-neon">Ghi chú</label>
                <textarea asp-for="Note" class="form-control input-glass" rows="3" placeholder="Thông tin thêm về thời gian lấy hàng, quy định..."></textarea>
            </div>

            <div class="switch-card mb-5">
                <div>
                    <label class="fw-bold d-block text-dark" for="IsActive">Kích hoạt ngay</label>
                    <small class="text-muted" style="font-size: 10px;">Cho phép chọn đơn vị này khi xử lý đơn</small>
                </div>
                <div class="form-check form-switch m-0">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked style="cursor: pointer; transform: scale(1.2);">
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-lg py-3 border-0"
                        style="background: linear-gradient(135deg, #f97316 0%, #fbbf24 100%);">
                    <i class="bi bi-check2-circle me-2"></i> Lưu thông tin
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}