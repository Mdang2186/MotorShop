@model MotorShop.Models.Brand
@{
    ViewData["Title"] = "Cập nhật thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Head {
    <style>
        /* --- CENTER GLASS FORM --- */
        .form-center-glass {
            max-width: 700px;
            margin: 2rem auto;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 20px 60px -10px rgba(59, 130, 246, 0.15); /* Blue Shadow */
            border: 1px solid white;
            position: relative;
            overflow: hidden;
        }

        /* --- NEON INPUTS --- */
        .input-glass {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            padding: 14px 20px;
            font-weight: 600;
            color: #334155;
            transition: 0.3s;
        }

            .input-glass:focus {
                background: white;
                border-color: #3b82f6;
                box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
                outline: none;
            }

        .form-label-neon {
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            color: #64748b;
            margin-bottom: 8px;
            margin-left: 4px;
            display: block;
        }

        /* --- LOGO PREVIEW ZONE --- */
        .logo-edit-wrapper {
            position: relative;
            width: 100%;
            height: 180px;
            border-radius: 20px;
            overflow: hidden;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border: 2px solid #f1f5f9;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Logo Image */
        .logo-current {
            max-width: 80%;
            max-height: 80%;
            object-fit: contain;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
            transition: transform 0.3s;
        }

            .logo-current:hover {
                transform: scale(1.05);
            }

        /* Placeholder Text */
        .logo-placeholder {
            font-size: 48px;
            font-weight: 900;
            color: #cbd5e1;
            text-transform: uppercase;
        }

        /* Remove Button */
        .btn-remove-logo {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
            background: rgba(255, 255, 255, 0.9);
            color: #ef4444;
            border: 1px solid #fecaca;
            width: 36px;
            height: 36px;
            border-radius: 10px;
            display: grid;
            place-items: center;
            transition: 0.2s;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

            .btn-remove-logo:hover {
                background: #ef4444;
                color: white;
                border-color: #ef4444;
            }

        /* --- SWITCH & BUTTONS --- */
        .status-card {
            background: white;
            border: 1px solid #f1f5f9;
            border-radius: 16px;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.02);
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
            cursor: pointer;
            background-color: #cbd5e1;
            border: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'%3e%3ccircle r='3' fill='white'/%3e%3c/svg%3e");
        }

            .form-switch .form-check-input:checked {
                background-color: #10b981;
                box-shadow: 0 0 10px rgba(16, 185, 129, 0.4);
            }
    </style>
}

<div class="container fade-in-up">
    <div class="d-flex align-items-center justify-content-between mb-3" style="max-width: 700px; margin: 0 auto;">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn btn-light rounded-circle shadow-sm d-grid place-items-center" style="width: 45px; height: 45px;">
                <i class="bi bi-arrow-left text-dark fs-5"></i>
            </a>
            <span class="text-muted fw-bold small text-uppercase">Danh sách</span>
        </div>

        <div class="dropdown">
            <button class="btn btn-light rounded-pill shadow-sm fw-bold px-3 dropdown-toggle text-secondary" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-gear-fill me-1"></i> Tùy chọn
            </button>
            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 p-2">
                <li>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Xóa thương hiệu này?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item rounded-3 text-danger fw-bold"><i class="bi bi-trash3 me-2"></i> Xóa thương hiệu</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <div class="form-center-glass">
        <div class="text-center mb-5">
            <div class="d-inline-flex p-3 rounded-4 mb-3 text-white shadow-lg" style="background: var(--grad-info);">
                <i class="bi bi-pencil-square fs-2"></i>
            </div>
            <h2 class="fw-bolder mb-1 h-value text-dark">Cập nhật Thương hiệu</h2>
            <span class="badge bg-light text-secondary border px-3 py-2 rounded-pill">ID: #@Model.Id</span>
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="removeLogo" id="removeLogoInput" value="false" />

            <div class="row g-4">
                <div class="col-md-5">
                    <label class="form-label-neon">Logo nhận diện</label>

                    <div class="logo-edit-wrapper" id="logoWrapper">
                        @{
                            // Logic ưu tiên: 1. LogoUrl -> 2. Slug -> 3. Placeholder
                            string imgSrc = Model.LogoUrl;
                            bool hasCustomLogo = !string.IsNullOrEmpty(imgSrc);

                            // Nếu không có LogoUrl, dùng ảnh theo slug
                            if (string.IsNullOrEmpty(imgSrc))
                            {
                                imgSrc = $"/images/brands/{Model.Slug}.png";
                            }
                        }

                        <img src="@imgSrc" class="logo-current" id="imgDisplay"
                             onerror="this.style.display='none'; document.getElementById('placeholderBox').style.display='flex';" />

                        <div id="placeholderBox" class="logo-placeholder" style="display:none;">
                            @Model.Name.Substring(0, 1).ToUpper()
                        </div>

                        @if (hasCustomLogo)
                        {
                            <button type="button" class="btn-remove-logo" title="Xóa ảnh đã upload" onclick="markRemoveLogo()">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        }
                    </div>

                    <div class="mt-3">
                        <label class="btn btn-light w-100 rounded-pill border fw-bold text-primary shadow-sm" style="cursor: pointer;">
                            <i class="bi bi-cloud-upload me-2"></i> Tải ảnh mới
                            <input type="file" name="logoFile" id="logoInput" class="d-none" accept="image/*" />
                        </label>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label-neon">Tên thương hiệu <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control input-glass" onkeyup="genSlug(this.value)" />
                        <span asp-validation-for="Name" class="text-danger small fw-bold mt-1 d-block ps-2"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Slug" class="form-label-neon">Slug (SEO URL)</label>
                        <input asp-for="Slug" id="slugInput" class="form-control input-glass text-muted" />
                    </div>

                    <div class="status-card">
                        <div>
                            <label class="fw-bold d-block text-dark" for="IsActive">Trạng thái</label>
                            <small class="text-muted" style="font-size: 10px;">Đang kinh doanh trên hệ thống</small>
                        </div>
                        <div class="form-check form-switch m-0">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" style="cursor: pointer; transform: scale(1.2);">
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label-neon">Mô tả chi tiết</label>
                    <textarea asp-for="Description" class="form-control input-glass" rows="3" placeholder="Thông tin giới thiệu về hãng..."></textarea>
                </div>
            </div>

            <div class="d-grid gap-3 mt-5">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-lg py-3 border-0"
                        style="background: var(--grad-info);">
                    <i class="bi bi-floppy2-fill me-2"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Auto generate Slug
        function genSlug(text) {
            const slug = text.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "")
                .replace(/đ/g, "d").replace(/[^a-z0-9\s-]/g, "").trim().replace(/\s+/g, "-");
            document.getElementById('slugInput').value = slug;
        }

        // Image Preview Logic
        const logoInput = document.getElementById('logoInput');
        const wrapper = document.getElementById('logoWrapper');
        const imgDisplay = document.getElementById('imgDisplay');
        const placeholderBox = document.getElementById('placeholderBox');

        logoInput.onchange = evt => {
            const [file] = logoInput.files;
            if (file) {
                // Reset remove flag
                document.getElementById('removeLogoInput').value = 'false';

                // Update UI
                const newSrc = URL.createObjectURL(file);
                if(imgDisplay) {
                    imgDisplay.src = newSrc;
                    imgDisplay.style.display = 'block';
                } else {
                    // Nếu trước đó đang hiện placeholder (imgDisplay ẩn hoặc không có)
                    wrapper.innerHTML = `<img src="${newSrc}" class="logo-current shadow-sm" id="imgDisplay" />`;
                }
                if(placeholderBox) placeholderBox.style.display = 'none';
            }
        }

        function markRemoveLogo() {
            if(confirm('Bạn muốn xóa logo này khi lưu?')) {
                document.getElementById('removeLogoInput').value = 'true';

                // Thay thế vùng ảnh bằng giao diện "Đã xóa"
                wrapper.innerHTML = `
                    <div class="d-flex flex-column align-items-center justify-content-center text-danger h-100 w-100 bg-danger bg-opacity-10 rounded-4 border border-danger border-opacity-25 border-dashed">
                        <i class="bi bi-trash3-fill fs-1 opacity-50"></i>
                        <div class="small fw-bold mt-2">Đã đánh dấu xóa</div>
                        <div class="api-text text-muted" style="font-size:10px;">Lưu để áp dụng</div>
                    </div>`;
            }
        }
    </script>
}