@model MotorShop.ViewModels.Admin.AdminChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Head {
    <style>
        /* --- CENTER FORM --- */
        .auth-card-glass {
            max-width: 550px;
            margin: 3rem auto;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(25px);
            border: 1px solid white;
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 20px 50px -10px rgba(239, 68, 68, 0.1); /* Red shadow for security context */
            position: relative;
            overflow: hidden;
        }

            /* Decoration */
            .auth-card-glass::before {
                content: '';
                position: absolute;
                top: -60px;
                left: -60px;
                width: 150px;
                height: 150px;
                border-radius: 50%;
                background: linear-gradient(135deg, #f87171, #f43f5e);
                opacity: 0.1;
                filter: blur(40px);
            }

        .lock-icon-box {
            width: 70px;
            height: 70px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #fee2e2 0%, #ffedd5 100%);
            border-radius: 20px;
            display: grid;
            place-items: center;
            font-size: 30px;
            color: #ef4444;
            box-shadow: 0 8px 20px -5px rgba(239, 68, 68, 0.2);
            transform: rotate(-5deg);
        }

        /* Inputs */
        .input-glass {
            background: #fff1f2; /* Light red tint background */
            border: 1px solid #ffe4e6;
            border-radius: 14px;
            padding: 12px 18px;
            font-weight: 600;
            color: #be123c;
            transition: 0.3s;
        }

            .input-glass:focus {
                background: white;
                border-color: #f43f5e;
                box-shadow: 0 0 0 4px rgba(244, 63, 94, 0.1);
                outline: none;
            }

        .form-label-neon {
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            color: #9f1239;
            margin-bottom: 6px;
            display: block;
            margin-left: 4px;
        }

        .btn-submit-auth {
            background: linear-gradient(135deg, #ef4444 0%, #f43f5e 100%);
            border: none;
            color: white;
            font-weight: 700;
            font-size: 16px;
            padding: 14px;
            border-radius: 16px;
            width: 100%;
            box-shadow: 0 10px 25px -5px rgba(239, 68, 68, 0.4);
            transition: 0.2s;
        }

            .btn-submit-auth:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 30px -5px rgba(239, 68, 68, 0.5);
            }
    </style>
}

<div class="container fade-in-up">
    <div class="auth-card-glass">
        <div class="text-center mb-5">
            <div class="lock-icon-box">
                <i class="bi bi-shield-lock-fill"></i>
            </div>
            <h2 class="fw-bolder mb-2 text-dark">Đổi mật khẩu</h2>
            <p class="text-muted small">Bảo vệ tài khoản quản trị của bạn.</p>
        </div>

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger border-0 bg-danger bg-opacity-10 text-danger rounded-3 mb-4 small shadow-sm">
                    <div asp-validation-summary="All" class="mb-0"></div>
                </div>
            }

            <div class="mb-4">
                <label asp-for="OldPassword" class="form-label-neon">Mật khẩu hiện tại</label>
                <div class="position-relative">
                    <input asp-for="OldPassword" type="password" class="form-control input-glass" placeholder="••••••••" />
                    <i class="bi bi-key-fill position-absolute text-danger opacity-25" style="right: 15px; top: 50%; transform: translateY(-50%);"></i>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="NewPassword" class="form-label-neon">Mật khẩu mới</label>
                <div class="position-relative">
                    <input asp-for="NewPassword" type="password" class="form-control input-glass" placeholder="••••••••" />
                    <i class="bi bi-lock-fill position-absolute text-danger opacity-25" style="right: 15px; top: 50%; transform: translateY(-50%);"></i>
                </div>
            </div>

            <div class="mb-5">
                <label asp-for="ConfirmPassword" class="form-label-neon">Xác nhận mật khẩu mới</label>
                <div class="position-relative">
                    <input asp-for="ConfirmPassword" type="password" class="form-control input-glass" placeholder="••••••••" />
                    <i class="bi bi-check-circle-fill position-absolute text-danger opacity-25" style="right: 15px; top: 50%; transform: translateY(-50%);"></i>
                </div>
            </div>

            <button type="submit" class="btn-submit-auth">
                Xác nhận đổi mật khẩu
            </button>

            <div class="text-center mt-4">
                <a asp-action="Profile" class="text-decoration-none text-muted small fw-bold hover-underline">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại hồ sơ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}