@model MotorShop.Models.Branch
@{
    ViewData["Title"] = "Xóa chi nhánh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    // Kiểm tra nếu chi nhánh này có đơn hàng nhận tại đây (nếu Model có Include)
    // Lưu ý: Controller DeleteConfirmed đã check logic này, ở View ta hiển thị cảnh báo
    bool hasOrders = Model.PickupOrders != null && Model.PickupOrders.Any();
}

<div class="d-flex align-items-center justify-content-center min-vh-100 fade-in-up" style="min-height: 80vh;">
    <div class="card border-0 shadow-2xl rounded-5 p-5 text-center position-relative overflow-hidden"
         style="max-width: 500px; width: 100%; background: rgba(255,255,255,0.95); backdrop-filter: blur(30px);">

        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: radial-gradient(circle at center, rgba(239, 68, 68, 0.05), transparent 70%); pointer-events: none;"></div>

        <div class="mx-auto mb-4 d-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10 text-danger shadow-sm"
             style="width: 90px; height: 90px; animation: pulse 2s infinite;">
            <i class="bi bi-geo-alt-fill" style="font-size: 40px;"></i>
        </div>

        <h3 class="fw-bolder text-dark mb-2">Xóa Chi Nhánh?</h3>

        <p class="text-muted mb-4 fs-6 px-3">
            Bạn sắp xóa chi nhánh <strong class="text-dark bg-light px-2 py-1 rounded">@Model.Name</strong>.<br>
            Hành động này <span class="text-danger fw-bold">không thể hoàn tác</span>.
        </p>

        <div class="bg-light rounded-4 p-3 mb-4 border border-danger border-opacity-25 text-start shadow-sm">
            <div class="d-flex justify-content-between mb-2">
                <span class="small text-muted fw-bold text-uppercase">Mã</span>
                <span class="font-monospace fw-bold text-primary">@(Model.Code ?? "N/A")</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="small text-muted fw-bold text-uppercase">Địa chỉ</span>
                <span class="fw-bold text-dark text-truncate ms-2" style="max-width: 250px;">@Model.Address</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="small text-muted fw-bold text-uppercase">Trạng thái</span>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success bg-opacity-10 text-success">Hoạt động</span>
                }
                else
                {
                    <span class="badge bg-secondary bg-opacity-10 text-secondary">Đã đóng</span>
                }
            </div>
        </div>

        @if (hasOrders)
        {
            <div class="alert alert-danger border-0 bg-danger bg-opacity-10 text-danger text-start small mb-4 rounded-3">
                <div class="d-flex gap-2">
                    <i class="bi bi-shield-lock-fill fs-5"></i>
                    <div>
                        <strong>Không thể xóa!</strong><br>
                        Chi nhánh này đang có đơn hàng chờ nhận xe. Vui lòng xử lý đơn hàng trước.
                    </div>
                </div>
            </div>
            <a asp-action="Index" class="btn btn-light btn-lg w-100 rounded-pill fw-bold border">Quay lại</a>
        }
        else
        {
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-lg border-0"
                            style="background: linear-gradient(135deg, #ef4444, #dc2626);">
                        <i class="bi bi-trash3-fill me-2"></i> Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-lg rounded-pill fw-bold text-muted">Hủy bỏ</a>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <style>
        @@keyframes pulse {
            0%

        {
            box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4);
        }

        70% {
            box-shadow: 0 0 0 20px rgba(239, 68, 68, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(239, 68, 68, 0);
        }

        }
    </style>
}