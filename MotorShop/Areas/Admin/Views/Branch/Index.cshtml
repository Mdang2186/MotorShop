@model MotorShop.Areas.Admin.Controllers.BranchController.BranchIndexViewModel
@{
    ViewData["Title"] = "Quản lý chi nhánh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    int currentPage = Model.Page;
    int totalPages = Model.TotalPages;
}

@section Head {
    <style>
        /* 3D Map Card */
        .branch-card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(12px);
            border-radius: 24px;
            overflow: hidden;
            border: 1px solid white;
            box-shadow: var(--shadow-card);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .branch-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 20px 40px -5px rgba(99, 102, 241, 0.15);
                border-color: #a78bfa;
            }

        .map-preview {
            height: 140px;
            background: #e0e7ff;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        /* Giả lập bản đồ neon */
        .map-pattern {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(#818cf8 2px, transparent 2px);
            background-size: 20px 20px;
            opacity: 0.3;
        }

        .pin-icon {
            font-size: 40px;
            color: #ef4444;
            text-shadow: 0 4px 10px rgba(239, 68, 68, 0.4);
            z-index: 1;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        .branch-status {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            background: rgba(255,255,255,0.9);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .status-on {
            color: #10b981;
            border: 2px solid #10b981;
        }

        .status-off {
            color: #94a3b8;
            border: 2px solid #cbd5e1;
        }

        /* Content */
        .branch-body {
            padding: 20px;
            flex-grow: 1;
        }

        .branch-title {
            font-size: 18px;
            font-weight: 800;
            color: #1e293b;
            margin-bottom: 5px;
        }

        .branch-code {
            font-family: monospace;
            font-size: 12px;
            color: #6366f1;
            background: #eef2ff;
            padding: 2px 6px;
            border-radius: 4px;
        }

        .info-row {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            font-size: 13px;
            color: #64748b;
            margin-top: 12px;
        }

            .info-row i {
                color: #94a3b8;
                font-size: 16px;
                margin-top: 1px;
            }

        /* Actions */
        .branch-footer {
            padding: 15px 20px;
            border-top: 1px solid #f1f5f9;
            background: rgba(255,255,255,0.5);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
}

<div class="d-flex flex-wrap justify-content-between align-items-end mb-5 fade-in-up">
    <div>
        <h2 class="fw-bolder mb-1 h-value">Hệ thống chi nhánh</h2>
        <div class="d-flex align-items-center gap-3 text-muted small">
            <span><i class="bi bi-shop me-1"></i> @Model.TotalBranches Showroom</span>
            <span class="text-success fw-bold"><i class="bi bi-check-circle-fill me-1"></i> @Model.ActiveCount Hoạt động</span>
        </div>
    </div>

    <div class="d-flex gap-2">
        <form asp-action="Index" method="get" class="d-flex bg-white p-1 rounded-pill shadow-sm border">
            <input type="text" name="q" value="@Model.Search" class="form-control border-0 bg-transparent rounded-pill ps-3" placeholder="Tìm chi nhánh..." style="font-size: 13px; width: 220px;">
            <button class="btn btn-primary rounded-circle d-grid place-items-center" style="width: 36px; height: 36px; background: var(--grad-primary); border: none;"><i class="bi bi-search"></i></button>
        </form>

        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 fw-bold shadow-lg d-flex align-items-center gap-2 ms-2"
           style="background: var(--grad-success); border: none;">
            <i class="bi bi-plus-lg"></i> Thêm mới
        </a>
    </div>
</div>

<div class="row g-4 fade-in-up delay-1">
    @foreach (var item in Model.Items)
    {
        <div class="col-md-6 col-xl-4">
            <div class="branch-card">
                <div class="map-preview">
                    <div class="map-pattern"></div>
                    <i class="bi bi-geo-alt-fill pin-icon"></i>
                    <div class="branch-status @(item.IsActive ? "status-on" : "status-off")">
                        @(item.IsActive ? "Open" : "Closed")
                    </div>
                </div>

                <div class="branch-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="branch-title text-truncate" title="@item.Name">@item.Name</div>
                        @if (!string.IsNullOrEmpty(item.Code))
                        {
                            <span class="branch-code">@item.Code</span>
                        }
                    </div>

                    <div class="info-row">
                        <i class="bi bi-geo-alt"></i>
                        <span>@item.Address</span>
                    </div>
                    <div class="info-row">
                        <i class="bi bi-telephone"></i>
                        <span class="fw-bold text-dark">@(item.Phone ?? "---")</span>
                    </div>
                    <div class="info-row">
                        <i class="bi bi-clock"></i>
                        <span>@(item.OpeningHours ?? "---")</span>
                    </div>
                </div>

                <div class="branch-footer">
                    <div class="form-check form-switch">
                        <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" id="toggle-@item.Id">
                            @Html.AntiForgeryToken()
                            <input class="form-check-input cursor-pointer" type="checkbox" @(item.IsActive ? "checked" : "")
                                   onchange="document.getElementById('toggle-@item.Id').submit()">
                            <label class="form-check-label small text-muted">Hoạt động</label>
                        </form>
                    </div>

                    <div class="d-flex gap-2">
                        @if (!string.IsNullOrEmpty(item.MapUrl))
                        {
                            <a href="@item.MapUrl" target="_blank" class="btn btn-sm btn-light rounded-circle shadow-sm text-primary" title="Xem bản đồ">
                                <i class="bi bi-map-fill"></i>
                            </a>
                        }
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light rounded-circle shadow-sm text-info" title="Sửa">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Xóa chi nhánh này?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-light rounded-circle shadow-sm text-danger" title="Xóa">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-md-6 col-xl-4">
        <a asp-action="Create" class="branch-card d-flex align-items-center justify-content-center text-decoration-none bg-light border-dashed"
           style="border: 2px dashed #cbd5e1; background: rgba(255,255,255,0.4); box-shadow: none; min-height: 350px; cursor: pointer;">
            <div class="text-center text-muted">
                <div class="mb-3 p-4 rounded-circle bg-white shadow-sm d-inline-grid place-items-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-shop-window fs-1 text-success"></i>
                </div>
                <div class="fw-bold fs-5">Mở chi nhánh mới</div>
                <div class="small mt-1">Mở rộng mạng lưới kinh doanh</div>
            </div>
        </a>
    </div>
</div>

@if (totalPages > 1)
{
    <div class="d-flex justify-content-center mt-5">
        <nav>
            <ul class="pagination pagination-sm gap-2 mb-0">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item">
                        <a class="page-link border-0 rounded-circle fw-bold shadow-sm @(i == currentPage ? "bg-primary text-white" : "text-muted bg-white")"
                           style="width: 35px; height: 35px; display: grid; place-items: center; @(i == currentPage ? "background: var(--grad-primary);" : "")"
                           href="@Url.Action("Index", new { page = i, q = Model.Search, onlyActive = Model.OnlyActive })">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}