@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@title - MotorShop Future</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --bg-body: #f1f5f9;
            --text-main: #1e293b;
            --text-muted: #64748b;
            /* Neon Gradients */
            --grad-primary: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --grad-success: linear-gradient(135deg, #10b981 0%, #34d399 100%);
            --grad-warning: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
            --grad-info: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
            --grad-danger: linear-gradient(135deg, #f43f5e 0%, #fb7185 100%);
            --shadow-card: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
            --shadow-hover: 0 20px 40px -5px rgba(99, 102, 241, 0.15);
            --shadow-neon: 0 8px 15px -3px rgba(99, 102, 241, 0.3);
            --glass-border: 1px solid rgba(255, 255, 255, 0.8);
            --glass-bg: rgba(255, 255, 255, 0.7);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--text-main);
            background-color: var(--bg-body);
            background-image: radial-gradient(at 0% 0%, rgba(99, 102, 241, 0.12) 0px, transparent 55%), radial-gradient(at 100% 0%, rgba(236, 72, 153, 0.12) 0px, transparent 55%), radial-gradient(at 100% 100%, rgba(34, 211, 238, 0.12) 0px, transparent 55%);
            background-attachment: fixed;
            min-height: 100vh;
        }

        .admin-shell {
            display: grid;
            grid-template-columns: 260px 1fr;
            min-height: 100vh;
        }

        .admin-sidebar {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.6);
            padding: 24px;
            display: flex;
            flex-direction: column;
            position: sticky;
            top: 0;
            height: 100vh;
            z-index: 100;
        }

        .admin-main {
            display: flex;
            flex-direction: column;
            padding: 0 30px 30px 30px;
            overflow-x: hidden;
        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }

        /* Effect main content */
        .fade-in-up {
            animation: fadeInUp 0.4s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(6px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 992px) {
            .admin-shell {
                grid-template-columns: 1fr;
            }

            .admin-sidebar {
                display: none; /* TODO: nếu muốn mobile menu thì thêm offcanvas sau */
            }

            .admin-main {
                padding: 15px;
            }
        }
    </style>

    @RenderSection("Head", required: false)
</head>
<body>
    <div class="admin-shell">
        @await Html.PartialAsync("_AdminSidebar")

        <div class="admin-main">
            @await Html.PartialAsync("_AdminTopbar")

            <main class="fade-in-up">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
