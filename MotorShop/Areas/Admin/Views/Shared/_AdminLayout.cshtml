@using MotorShop.Utilities
@{
    // Xác định controller/action hiện tại để active menu
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
    string act = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLower();

    // Hàm helper active menu: Nền xanh nhạt, chữ xanh đậm, border trái
    string ActiveClass(string c, string a = null)
    {
        bool isActive = ctrl == c.ToLower() && (a == null || act == a.ToLower());
        return isActive
            ? "bg-blue-50 text-blue-700 font-semibold border-r-4 border-blue-700"
            : "text-slate-600 hover:bg-slate-50 hover:text-slate-900 group";
    }
}
<!DOCTYPE html>
<html lang="vi" class="h-full bg-slate-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotorShop Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        [x-cloak] {
            display: none !important;
        }
        /* Tùy chỉnh scrollbar cho đẹp */
        ::-webkit-scrollbar {
            width: 5px;
            height: 5px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }
    </style>
</head>
<body class="h-full" x-data="{ sidebarOpen: false }">
    <div x-show="sidebarOpen" class="fixed inset-0 z-40 bg-slate-900/50 backdrop-blur-sm lg:hidden"
         x-transition.opacity @@click ="sidebarOpen = false"></div>

    <div class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-slate-200 transform transition-transform duration-300 lg:translate-x-0 flex flex-col"
         :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'">

        <div class="flex items-center h-16 px-6 border-b border-slate-100 shrink-0">
            <i class="fa-solid fa-motorcycle text-blue-600 text-3xl mr-3"></i>
            <div>
                <h1 class="text-lg font-extrabold text-slate-900 tracking-tight">MotorShop</h1>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Admin Panel</p>
            </div>
        </div>

        <nav class="flex-1 overflow-y-auto py-4 px-3 space-y-1">
            <a asp-controller="Dashboard" asp-action="Index" class="flex items-center px-3 py-2.5 text-sm rounded-lg transition-all duration-200 @ActiveClass("dashboard")">
                <i class="fa-solid fa-chart-pie w-6 text-[18px] opacity-75 @(ctrl == "dashboard" ? "text-blue-600" : "text-slate-400 group-hover:text-slate-600")"></i>
                <span class="ml-2">Tổng quan</span>
            </a>

            <div class="pt-4 pb-2">
                <p class="px-3 text-xs font-semibold text-slate-400 uppercase tracking-wider">Quản lý cửa hàng</p>
            </div>

            <a asp-controller="Product" asp-action="Index" class="flex items-center px-3 py-2.5 text-sm rounded-lg transition-all duration-200 @ActiveClass("product")">
                <i class="fa-solid fa-box-archive w-6 text-[18px] opacity-75 @(ctrl == "product" ? "text-blue-600" : "text-slate-400 group-hover:text-slate-600")"></i>
                <span class="ml-2">Sản phẩm</span>
            </a>
            <a asp-controller="Order" asp-action="Index" class="flex items-center px-3 py-2.5 text-sm rounded-lg transition-all duration-200 @ActiveClass("order")">
                <i class="fa-solid fa-clipboard-list w-6 text-[18px] opacity-75 @(ctrl == "order" ? "text-blue-600" : "text-slate-400 group-hover:text-slate-600")"></i>
                <span class="ml-2">Đơn hàng</span>
            </a>
            <a asp-controller="Category" asp-action="Index" class="flex items-center px-3 py-2.5 text-sm rounded-lg transition-all duration-200 @ActiveClass("category")">
                <i class="fa-solid fa-layer-group w-6 text-[18px] opacity-75 @(ctrl == "category" ? "text-blue-600" : "text-slate-400 group-hover:text-slate-600")"></i>
                <span class="ml-2">Danh mục</span>
            </a>
            <a asp-controller="Customer" asp-action="Index" class="flex items-center px-3 py-2.5 text-sm rounded-lg transition-all duration-200 @ActiveClass("customer")">
                <i class="fa-solid fa-users w-6 text-[18px] opacity-75 @(ctrl == "customer" ? "text-blue-600" : "text-slate-400 group-hover:text-slate-600")"></i>
                <span class="ml-2">Khách hàng</span>
            </a>

            <div class="pt-4 pb-2">
                <p class="px-3 text-xs font-semibold text-slate-400 uppercase tracking-wider">Hệ thống</p>
            </div>
            <a asp-controller="User" asp-action="Index" class="flex items-center px-3 py-2.5 text-sm rounded-lg transition-all duration-200 @ActiveClass("user")">
                <i class="fa-solid fa-user-gear w-6 text-[18px] opacity-75 @(ctrl == "user" ? "text-blue-600" : "text-slate-400 group-hover:text-slate-600")"></i>
                <span class="ml-2">Phân quyền</span>
            </a>
        </nav>

        <div class="p-4 border-t border-slate-200 shrink-0">
            <div class="flex items-center">
                <img class="h-9 w-9 rounded-full bg-slate-100" src="https://ui-avatars.com/api/?name=Admin&background=2563eb&color=fff" alt="Admin">
                <div class="ml-3 min-w-0 flex-1">
                    <p class="text-sm font-medium text-slate-900 truncate">Administrator</p>
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="flex items-center mt-0.5 text-xs text-slate-500 hover:text-red-600 cursor-pointer transition-colors">
                        <button type="submit" class="flex items-center">
                            <i class="fa-solid fa-right-from-bracket mr-1.5"></i> Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="lg:pl-64 flex flex-col h-full">
        <header class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-slate-200 bg-white/80 backdrop-blur-md px-4 sm:gap-x-6 sm:px-6 lg:px-8">
            <button type="button" class="-m-2.5 p-2.5 text-slate-700 lg:hidden" @@click ="sidebarOpen = true">
                <span class="sr-only">Open sidebar</span>
                <i class="fa-solid fa-bars text-xl"></i>
            </button>
            <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6 items-center">
                <form class="relative flex flex-1" action="#" method="GET">
                    <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none"></i>
                    <input type="search" placeholder="Tìm kiếm nhanh (Ctrl + K)..."
                           class="block w-full lg:w-96 rounded-full border-0 py-2 pl-10 pr-4 text-slate-900 ring-1 ring-inset ring-slate-200 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6 bg-slate-50 hover:bg-white transition-all">
                </form>

                <div class="flex items-center gap-x-4 lg:gap-x-6">
                    <button type="button" class="p-2 text-slate-400 hover:text-blue-600 transition-colors relative">
                        <i class="fa-regular fa-bell text-xl"></i>
                        <span class="absolute top-1.5 right-1.5 h-2.5 w-2.5 rounded-full bg-red-500 ring-2 ring-white"></span>
                    </button>
                </div>
            </div>
        </header>

        <main class="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8">
            @if (TempData["Success"] != null)
            {
                <div class="mb-4 p-4 text-sm text-green-700 bg-green-100 rounded-lg border border-green-200 flex items-center" role="alert">
                    <i class="fa-solid fa-circle-check mr-2 text-lg"></i> @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="mb-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg border border-red-200 flex items-center" role="alert">
                    <i class="fa-solid fa-circle-exclamation mr-2 text-lg"></i> @TempData["Error"]
                </div>
            }

            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>