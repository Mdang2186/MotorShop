@{
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
    string ActiveClass(string c) => ctrl == c
        ? "bg-blue-700 text-white"
        : "text-blue-200 hover:text-white hover:bg-blue-800";
}
<div class="flex grow flex-col gap-y-5 overflow-y-auto bg-blue-900 px-6 pb-4">
    <div class="flex h-16 shrink-0 items-center">
        <i class="fa-solid fa-motorcycle text-white text-3xl mr-3"></i>
        <span class="text-white font-bold text-xl tracking-tight">MotorShop</span>
    </div>
    <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
            <li>
                <ul role="list" class="-mx-2 space-y-1">
                    <li>
                        <a asp-controller="Dashboard" asp-action="Index" class="@ActiveClass("dashboard") group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                            <i class="fa-solid fa-chart-pie w-6 text-center text-[16px] shrink-0"></i>
                            Tổng quan
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Product" asp-action="Index" class="@ActiveClass("product") group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                            <i class="fa-solid fa-box-archive w-6 text-center text-[16px] shrink-0"></i>
                            Sản phẩm
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Order" asp-action="Index" class="@ActiveClass("order") group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                            <i class="fa-solid fa-clipboard-list w-6 text-center text-[16px] shrink-0"></i>
                            Đơn hàng
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Customer" asp-action="Index" class="@ActiveClass("customer") group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                            <i class="fa-solid fa-users w-6 text-center text-[16px] shrink-0"></i>
                            Khách hàng
                        </a>
                    </li>
                </ul>
            </li>
            <li class="mt-auto">
                <a href="#" class="group -mx-2 flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6 text-blue-200 hover:bg-blue-800 hover:text-white">
                    <i class="fa-solid fa-gear w-6 text-center text-[16px] shrink-0"></i>
                    Cài đặt
                </a>
            </li>
        </ul>
    </nav>
</div>