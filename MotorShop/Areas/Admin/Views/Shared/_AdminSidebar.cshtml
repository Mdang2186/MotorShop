@using Microsoft.AspNetCore.Mvc.Rendering
@using MotorShop.Utilities

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString() ?? "";

    string Active(string controllerName)
        => currentController.Equals(controllerName, StringComparison.OrdinalIgnoreCase)
           && currentArea.Equals(SD.AdminAreaName, StringComparison.OrdinalIgnoreCase)
               ? "active"
               : "";

    bool GroupActive(params string[] controllers)
        => controllers.Any(c => currentController.Equals(c, StringComparison.OrdinalIgnoreCase));
}

<style>
    .brand-logo {
        font-size: 24px;
        font-weight: 800;
        background: linear-gradient(to right, #6366f1, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.5px;
        position: relative;
    }

    .brand-sub {
        font-size: 11px;
        color: #94a3b8;
        margin-top: -2px;
    }

    .nav-label {
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 1px;
        margin: 22px 0 10px 10px;
    }

    .nav-item-3d {
        display: flex;
        align-items: center;
        padding: 11px 16px;
        margin-bottom: 6px;
        border-radius: 14px;
        color: #64748b;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.28s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid transparent;
        position: relative;
        overflow: hidden;
    }

        .nav-item-3d i {
            font-size: 19px;
            margin-right: 12px;
            color: #94a3b8;
            transition: color 0.28s, transform 0.28s;
        }

        .nav-item-3d span {
            position: relative;
            z-index: 2;
        }

        .nav-item-3d::before {
            content: "";
            position: absolute;
            inset: 0;
            opacity: 0;
            background: radial-gradient(circle at 0% 0%, rgba(129, 140, 248, 0.22), transparent 60%);
            transition: opacity 0.3s;
        }

        .nav-item-3d:hover {
            background: #ffffff;
            color: #4f46e5;
            box-shadow: 0 6px 22px -5px rgba(99, 102, 241, 0.25);
            transform: translateX(4px);
            border-color: rgba(255, 255, 255, 0.9);
        }

            .nav-item-3d:hover i {
                color: #4f46e5;
                transform: translateY(-1px);
            }

            .nav-item-3d:hover::before {
                opacity: 1;
            }

        .nav-item-3d.active {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            color: #ffffff;
            box-shadow: 0 10px 24px -8px rgba(79, 70, 229, 0.7);
            border-color: transparent;
        }

            .nav-item-3d.active i {
                color: #ffffff;
            }

            .nav-item-3d.active::before {
                opacity: 0;
            }

    .nav-badge {
        margin-left: auto;
        font-size: 10px;
        font-weight: 700;
        padding: 2px 8px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.18);
        color: #ffffff;
    }

    .nav-item-3d:not(.active) .nav-badge {
        background: #f1f5f9;
        color: #64748b;
    }

    .custom-scrollbar {
        scrollbar-width: thin;
        scrollbar-color: #cbd5e1 transparent;
    }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 10px;
        }
</style>

