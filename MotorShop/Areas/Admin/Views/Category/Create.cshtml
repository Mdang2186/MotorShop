@model MotorShop.Models.Category
@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Head {
    <style>
        .form-center-glass {
            max-width: 650px;
            margin: 2rem auto;
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.9);
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 20px 50px -10px rgba(99, 102, 241, 0.15);
            position: relative;
            overflow: hidden;
        }

            /* Decorative Gradient Blob */
            .form-center-glass::before {
                content: '';
                position: absolute;
                top: -50px;
                right: -50px;
                width: 150px;
                height: 150px;
                border-radius: 50%;
                background: var(--grad-primary);
                opacity: 0.1;
                filter: blur(30px);
            }

        .input-glass {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            padding: 14px 20px;
            font-weight: 600;
            color: #334155;
            transition: all 0.3s;
        }

            .input-glass:focus {
                background: white;
                border-color: #8b5cf6;
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
                outline: none;
            }

            .input-glass::placeholder {
                color: #94a3b8;
                font-weight: 500;
            }

        .form-label-neon {
            font-size: 12px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #64748b;
            margin-bottom: 8px;
            display: block;
            margin-left: 5px;
        }
    </style>
}

<div class="container fade-in-up">
    <div class="d-flex align-items-center gap-3 mb-3" style="max-width: 650px; margin: 0 auto;">
        <a asp-action="Index" class="btn btn-light rounded-circle shadow-sm d-grid place-items-center" style="width: 45px; height: 45px;">
            <i class="bi bi-arrow-left text-dark fs-5"></i>
        </a>
        <span class="text-muted fw-bold">Quay lại danh sách</span>
    </div>

    <div class="form-center-glass">
        <div class="text-center mb-5">
            <div class="d-inline-flex p-3 rounded-4 mb-3 text-white shadow-lg"
                 style="background: var(--grad-primary);">
                <i class="bi bi-folder-plus fs-2"></i>
            </div>
            <h2 class="fw-bolder mb-1 h-value text-dark">Tạo Danh Mục</h2>
            <p class="text-muted small">Phân loại sản phẩm giúp khách hàng dễ dàng tìm kiếm.</p>
        </div>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <label asp-for="Name" class="form-label-neon">Tên danh mục <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text border-0 bg-light rounded-start-4 ps-3 text-muted"><i class="bi bi-tag-fill"></i></span>
                    <input asp-for="Name" class="form-control input-glass rounded-end-4" placeholder="VD: Phụ tùng xe máy, Nhớt..." onkeyup="generateSlug(this.value)" autofocus />
                </div>
                <span asp-validation-for="Name" class="text-danger small fw-bold mt-1 d-block ps-2"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Slug" class="form-label-neon">SEO Slug (URL)</label>
                <input asp-for="Slug" id="slugInput" class="form-control input-glass text-muted" placeholder="tu-dong-tao-tu-ten" readonly tabindex="-1" />
                <div class="form-text small fst-italic ps-2"><i class="bi bi-info-circle me-1"></i> Đường dẫn thân thiện cho SEO.</div>
            </div>

            <div class="mb-5">
                <label asp-for="Description" class="form-label-neon">Mô tả ngắn</label>
                <textarea asp-for="Description" class="form-control input-glass" rows="4" placeholder="Nhập mô tả về danh mục này..."></textarea>
            </div>

            <div class="d-grid gap-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-lg py-3"
                        style="background: var(--grad-primary); border: none; font-size: 16px;">
                    <i class="bi bi-check2-circle me-2"></i> Tạo mới ngay
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function generateSlug(text) {
            const slug = text.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "")
                .replace(/đ/g, "d").replace(/[^a-z0-9\s-]/g, "").trim().replace(/\s+/g, "-");
            document.getElementById('slugInput').value = slug;
        }
    </script>
}