    @{
        // Lấy sản phẩm giảm giá sâu nhất
        var hotDealProduct = Model.FeaturedProducts
            .Where(p => p.OriginalPrice > p.Price)
            .OrderByDescending(p => p.OriginalPrice - p.Price)
            .FirstOrDefault() ?? Model.FeaturedProducts.FirstOrDefault();
            
        var hotDealId = hotDealProduct?.Id ?? 0;
        
        // Tính % giảm giá
        var hotDealDiscount = hotDealProduct != null && hotDealProduct.OriginalPrice > 0 
            ? (int)Math.Round((1 - hotDealProduct.Price / hotDealProduct.OriginalPrice.Value) * 100) 
            : 0;
            
        // Lấy ảnh chính xác
        var hotDealImage = hotDealProduct?.PrimaryImageUrl ?? "/images/products/placeholder.png";
    }

                @if (hotDealId > 0)
                {
                    // Logic lấy ảnh (giữ nguyên)
                    var finalHotDealImg = hotDealProduct?.ImageUrl;
