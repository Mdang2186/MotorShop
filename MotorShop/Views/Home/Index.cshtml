@model MotorShop.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<section class="relative h-[60vh] min-h-[400px] bg-gray-900 text-white flex items-center">
    <div class="absolute inset-0">
        <img src="~/images/content/A cinematicmotorcycle.jpg"
             class="w-full h-full object-cover opacity-40" alt="Motorcycle on the road">
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
        <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-4 drop-shadow-lg">
            Tìm Kiếm Chiếc Xe Của Bạn
        </h1>
        <p class="text-lg md:text-xl mb-8 text-gray-200 max-w-3xl mx-auto drop-shadow-md">
            Khám phá hàng ngàn xe máy chính hãng từ các thương hiệu hàng đầu với mức giá tốt nhất thị trường.
        </p>
        <a asp-controller="Products" asp-action="Index"
           class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105">
            <i class="fas fa-motorcycle mr-2"></i>
            Khám Phá Ngay
        </a>
    </div>
</section>

<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800">Mua sắm theo loại xe</h2>
            <p class="text-gray-500 mt-2">Tìm kiếm dễ dàng theo phong cách của bạn.</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 text-center">
            @foreach (var category in Model.Categories.Take(6))
            {
                <a asp-controller="Products" asp-action="Index" asp-route-categoryFilter="@category.Id"
                   class="block group p-4 border rounded-lg hover:shadow-lg hover:border-blue-500 transition-all duration-300">
                    <div class="flex items-center justify-center h-20 w-20 mx-auto bg-gray-100 rounded-full mb-4 group-hover:bg-blue-100 transition-colors">
                        @* Thêm Icon tương ứng cho từng loại xe. Dưới đây là ví dụ *@
                        @if (category.Name.Contains("tay ga"))
                        {
                            <i class="fas fa-scooter text-3xl text-gray-600 group-hover:text-blue-600"></i>
                        }
                        else if (category.Name.Contains("Sport"))
                        {

                            <i class="fas fa-motorcycle text-3xl text-gray-600 group-hover:text-blue-600"></i>
                        }
                        else if (category.Name.Contains("Naked"))
                        {

                            <i class="fa-solid fa-person-biking text-3xl text-gray-600 group-hover:text-blue-600"></i>
                        }
                        else if (category.Name.Contains("Cruiser"))
                        {

                            <i class="fa-solid fa-road text-3xl text-gray-600 group-hover:text-blue-600"></i>
                        }
                        else
                        {

                            <i class="fas fa-biking text-3xl text-gray-600 group-hover:text-blue-600"></i>
                        }
                    </div>
                    <h3 class="font-semibold text-gray-700">@category.Name</h3>
                </a>
            }
        </div>
    </div>
</section>


<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800">Xe Mới Về</h2>
            <p class="text-gray-500 mt-2">Những mẫu xe hot nhất vừa cập bến showroom.</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            @foreach (var product in Model.FeaturedProducts)
            {
                <partial name="_ProductCardPartial" model="product" />
            }
        </div>
        <div class="text-center mt-12">
            <a asp-controller="Products" asp-action="Index"
               class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300">
                Xem tất cả sản phẩm
            </a>
        </div>
    </div>
</section>

<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800">Tại sao chọn MotorShop?</h2>
            <p class="text-gray-500 mt-2">Chúng tôi mang đến những giá trị tốt nhất cho khách hàng.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div class="p-6">
                <div class="flex items-center justify-center h-16 w-16 mx-auto bg-blue-100 rounded-full mb-4">
                    <i class="fas fa-medal text-3xl text-blue-600"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Chất lượng chính hãng</h3>
                <p class="text-gray-600">Cam kết 100% xe máy chính hãng, có nguồn gốc rõ ràng và bảo hành toàn quốc.</p>
            </div>
            <div class="p-6">
                <div class="flex items-center justify-center h-16 w-16 mx-auto bg-blue-100 rounded-full mb-4">
                    <i class="fas fa-tags text-3xl text-blue-600"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Giá cả cạnh tranh</h3>
                <p class="text-gray-600">Luôn có những chương trình ưu đãi hấp dẫn và mức giá tốt nhất thị trường.</p>
            </div>
            <div class="p-6">
                <div class="flex items-center justify-center h-16 w-16 mx-auto bg-blue-100 rounded-full mb-4">
                    <i class="fas fa-headset text-3xl text-blue-600"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Dịch vụ tận tâm</h3>
                <p class="text-gray-600">Đội ngũ tư vấn viên chuyên nghiệp, sẵn sàng hỗ trợ bạn tìm được chiếc xe ưng ý.</p>
            </div>
        </div>
    </div>
</section>

<section class="py-12 bg-gray-100">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-8 items-center">
            @foreach (var brand in Model.Brands)
            {
                <a asp-controller="Products" asp-action="Index" asp-route-brandFilter="@brand.Id" class="flex justify-center grayscale opacity-60 hover:opacity-100 hover:grayscale-0 transition duration-300">
                    @* Thêm logo cho các hãng xe, bạn có thể lưu trong wwwroot/images/brands/ *@
                    <img src="~/images/brands/@(brand.Name.ToLower().Replace(" ", "-")).png" alt="@brand.Name" class="h-8">
                </a>
            }
        </div>
    </div>
</section>