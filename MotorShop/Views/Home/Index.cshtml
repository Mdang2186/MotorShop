@model MotorShop.ViewModels.Home.HomeViewModel
@{
    ViewData["Title"] = "Trang chủ - MotorShop Vietnam";
    string Vnd(decimal v) => v.ToString("#,0") + " ₫";

    // Lấy dữ liệu số lượng bán
    var soldCounts = ViewBag.SoldCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
    int GetSold(int pid) => soldCounts.ContainsKey(pid) ? soldCounts[pid] : 0;
}

@Html.AntiForgeryToken()

<style>
    /* === 1. CSS GLOBAL === */
    :root {
        --ms-primary: #2563eb;
        --ms-red: #ef4444;
        --ms-dark: #0f172a;
        --ms-green: #10b981;
    }

    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    button:focus {
        outline: none;
    }

    /* === 2. BEST SELLER LAYOUT (NEW) === */
    .spotlight-box {
        background: #ffffff;
        border-radius: 24px;
        padding: 32px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        overflow: hidden;
        border: 1px solid #f1f5f9;
        box-shadow: 0 20px 40px -10px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .spotlight-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px -12px rgba(37, 99, 235, 0.15);
            border-color: #bfdbfe;
        }

    /* Hiệu ứng nền mờ */
    .spotlight-bg-effect {
        position: absolute;
        top: -20%;
        right: -20%;
        width: 80%;
        height: 80%;
        background: radial-gradient(circle, rgba(37,99,235,0.08) 0%, rgba(255,255,255,0) 70%);
        z-index: 0;
        pointer-events: none;
        border-radius: 50%;
    }

    .spotlight-content {
        position: relative;
        z-index: 10;
    }

    .tag-rank {
        background: #fee2e2;
        color: #ef4444;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .tag-installment {
        background: #eff6ff;
        color: #2563eb;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .spotlight-title {
        font-size: 28px;
        font-weight: 800;
        color: #0f172a;
        margin: 16px 0 8px;
        line-height: 1.3;
        transition: color 0.2s;
    }

        .spotlight-title a:hover {
            color: var(--ms-primary);
        }

    .spotlight-price {
        font-size: 32px;
        font-weight: 800;
        color: var(--ms-red);
        letter-spacing: -1px;
    }

    /* Badge Đã bán */
    .sold-badge-lg {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--ms-green);
        font-weight: 700;
        font-size: 14px;
        background: #ecfdf5;
        padding: 5px 12px;
        border-radius: 99px;
        margin-top: 8px;
    }

    /* Ảnh Spotlight & Thumbnails */
    .spotlight-img-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px 0;
        position: relative;
    }

    .spotlight-main-img {
        width: 100%;
        max-height: 280px;
        object-fit: contain;
        transition: transform 0.5s ease;
        filter: drop-shadow(0 15px 30px rgba(0,0,0,0.15));
    }
    /* [FIX] Bỏ nghiêng ảnh khi hover, chỉ phóng to nhẹ */
    .spotlight-box:hover .spotlight-main-img {
        transform: scale(1.05);
    }

    .sp-thumbnails {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        margin-top: 20px;
        width: 100%;
    }

    .sp-thumb {
        aspect-ratio: 1/1;
        background: #f8fafc;
        border-radius: 12px;
        padding: 5px;
        border: 1px solid #e2e8f0;
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .sp-thumb:hover {
            border-color: var(--ms-primary);
        }

        .sp-thumb img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    /* Nút bấm Spotlight */
    .sp-actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-sp-buy {
        flex: 1;
        background: #0f172a;
        color: white;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
        box-shadow: 0 4px 12px rgba(15, 23, 42, 0.2);
        text-decoration: none;
    }

        .btn-sp-buy:hover {
            background: var(--ms-primary);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(37, 99, 235, 0.3);
            color: white;
        }

    .btn-sp-cart {
        width: 54px;
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        background: white;
        color: #64748b;
        font-size: 18px;
        display: grid;
        place-items: center;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-sp-cart:hover {
            border-color: var(--ms-primary);
            color: var(--ms-primary);
            background: #eff6ff;
        }

    /* Mini Card */
    .mini-card {
        background: white;
        border-radius: 16px;
        padding: 16px;
        border: 1px solid #f1f5f9;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        transition: all 0.2s;
    }

        .mini-card:hover {
            border-color: #93c5fd;
            box-shadow: 0 10px 25px -5px rgba(0,0,0,0.06);
            transform: translateY(-3px);
        }

    .mini-img-box {
        aspect-ratio: 4/3;
        background: #f8fafc;
        border-radius: 12px;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .mini-img {
        width: 90%;
        height: 90%;
        object-fit: contain;
        mix-blend-mode: multiply;
        transition: 0.3s;
    }
    /* [FIX] Bỏ nghiêng ảnh mini */
    .mini-card:hover .mini-img {
        transform: scale(1.05);
    }

    .mini-title {
        font-size: 14px;
        font-weight: 700;
        color: #334155;
        line-height: 1.4;
        margin-bottom: 4px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 40px;
        transition: 0.2s;
    }

    .mini-card:hover .mini-title {
        color: var(--ms-primary);
    }

    .mini-price {
        font-size: 16px;
        font-weight: 800;
        color: var(--ms-red);
    }

    .sold-badge-sm {
        font-size: 11px;
        font-weight: 600;
        color: var(--ms-green);
        display: flex;
        align-items: center;
        gap: 4px;
        margin-top: 4px;
    }

    .mini-actions {
        display: grid;
        grid-template-columns: 1fr 40px;
        gap: 8px;
        margin-top: 12px;
    }

    .btn-mini-buy {
        background: #f1f5f9;
        color: #0f172a;
        font-size: 12px;
        font-weight: 700;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-mini-buy:hover {
            background: #0f172a;
            color: white;
        }

    .btn-mini-cart {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        color: #64748b;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
    }

        .btn-mini-cart:hover {
            border-color: var(--ms-primary);
            color: var(--ms-primary);
        }

    /* Card thường (Featured/Parts) */
    .tech-card {
        background: white;
        border: 1px solid #f1f5f9;
        border-radius: 20px;
        padding: 20px;
        transition: 0.3s;
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .tech-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px -5px rgba(0,0,0,0.1);
            border-color: var(--ms-primary);
        }

    /* [FIX] Map có màu (bỏ filter grayscale) */
    .iframe-map {
        border-radius: 24px;
        border: 0;
        width: 100%;
        height: 100%;
    }
</style>

