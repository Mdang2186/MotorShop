@section Scripts {
    <script>
        // === 1. MAP LOGIC ===
        function updateMap(address) {
            const iframe = document.getElementById('gmap-canvas');
            if (iframe) {
                iframe.src = `https://maps.google.com/maps?q=${encodeURIComponent(address)}&t=&z=15&ie=UTF8&iwloc=&output=embed`;
            }
        }

        function filterMap(region) {
            document.querySelectorAll('.loc-list').forEach(l => l.classList.replace('block', 'hidden'));
            const selectedList = document.getElementById(`list-${region}`);
            if (selectedList) selectedList.classList.replace('hidden', 'block');

            document.querySelectorAll('.loc-tab-btn').forEach(b => {
                b.className = 'loc-tab-btn flex-1 py-2 rounded-lg text-[10px] font-bold text-slate-500 hover:text-slate-700 hover:bg-slate-200/50 uppercase';
            });
            const activeBtn = document.getElementById(`btn-${region}`);
            if (activeBtn) activeBtn.className = 'loc-tab-btn flex-1 py-2 rounded-lg text-[10px] font-bold bg-blue-600 text-white shadow-md uppercase active';
        }

        // Init Map: Tự động hiển thị địa chỉ đầu tiên của miền Bắc
        document.addEventListener('DOMContentLoaded', () => {
            filterMap('north');
            // Lấy địa chỉ đầu tiên trong list-north để load map ngay lập tức
            const firstBranch = document.querySelector('#list-north .p-3');
            if (firstBranch) {
                // Giả lập click hoặc lấy text address
                // Ở đây mình lấy text từ div chứa address
                const addrDiv = firstBranch.querySelector('div:nth-child(2)'); // div thứ 2 chứa address
                if(addrDiv) {
                    // Lấy text, bỏ icon nếu có
                    let addr = addrDiv.textContent.trim();
                    updateMap(addr);
                }
            }
        });

        // === 2. CART AJAX ===
        async function addToCart(productId) {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                document.body.style.cursor = 'wait';
                const res = await fetch('/Cart/AddToCart', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                });
                const data = await res.json();
                document.body.style.cursor = 'default';

                if (res.ok && data.success) {
                    const badge = document.getElementById('cart-badge');
                    if (badge && data.cartCount) badge.innerText = data.cartCount;
                    alert("✅ Đã thêm vào giỏ hàng thành công!");
                } else {
                    alert("❌ " + (data.message || "Lỗi."));
                }
            } catch (err) {
                console.error(err);
                document.body.style.cursor = 'default';
                alert("Lỗi kết nối.");
            }
        }
    </script>
}