@model MotorShop.ViewModels.OrderSuccessViewModel
@using MotorShop.Models.Enums

@{
    ViewData["Title"] = "Đặt hàng thành công";

    var hasPaymentQr = !string.IsNullOrWhiteSpace(Model.QrPayload);
    var hasOrderQr = !string.IsNullOrWhiteSpace(Model.OrderQrPayload);

    var paymentStatusClass = Model.PaymentStatus switch
    {
        PaymentStatus.Paid => "bg-emerald-50 text-emerald-700 border-emerald-200",
        PaymentStatus.Pending => "bg-amber-50 text-amber-700 border-amber-200",
        _ => "bg-gray-50 text-gray-700 border-gray-200"
    };
    var paymentStatusText = Model.PaymentStatus switch
    {
        PaymentStatus.Paid => "Đã thanh toán",
        PaymentStatus.Pending => "Chờ thanh toán",
        _ => "Trạng thái khác"
    };
}

@section Head {
    <style>
        .card-glass {
            background: rgba(255,255,255,.96);
            backdrop-filter: blur(10px) saturate(160%);
            border: 1px solid rgba(15,23,42,.06)
        }

        .ring-3d {
            box-shadow: inset 0 1px 0 rgba(255,255,255,.6),0 10px 30px rgba(2,6,23,.08)
        }

        .badge-soft {
            border-radius: 9999px;
            padding: 0.25rem 0.75rem;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            border-width: 1px
        }
    </style>
}
