@model MotorShop.ViewModels.CheckoutLineVm
@{
    // mode: "card" (mặc định) hoặc "table"
    var mode = (ViewData["mode"] as string ?? "card").ToLowerInvariant();
    var qty = Math.Max(1, Model.Quantity);
    var unit = Model.UnitPrice;
    var total = unit * qty;

    string Img(string? url) => string.IsNullOrWhiteSpace(url)
        ? Url.Content("~/images/placeholders/product.png")
        : Url.Content(url);
}

@if (mode == "table")
{
    <!-- Dùng cho bảng (nếu cần) -->
    <tr class="align-top">
        <td class="px-4 py-3">
            <div class="flex gap-3">
                <div class="relative w-14 h-14 rounded-xl overflow-hidden bg-gray-100 flex-shrink-0 shadow-sm">
                    <img src="@Img(Model.ImageUrl)" alt="@Model.Name"
                         class="w-full h-full object-cover"
                         onerror="this.src='@Url.Content("~/images/placeholders/product.png")'">
                </div>
                <div class="min-w-0">
                    <div class="font-medium text-gray-900 truncate">@Model.Name</div>
                    <div class="text-xs text-gray-500">Đơn giá: @unit.ToString("#,0") ₫</div>
                </div>
            </div>
        </td>
        <td class="px-4 py-3 text-sm text-gray-700">@qty</td>
        <td class="px-4 py-3 text-right font-semibold text-gray-900">@total.ToString("#,0") ₫</td>
    </tr>
}
else
{
    <!-- Card (mặc định cho Checkout/Index) -->
    <div class="flex items-center gap-3 rounded-xl border border-gray-100 p-3 card-glass ring-3d">
        <div class="relative w-16 h-16 rounded-xl overflow-hidden bg-white shadow-sm">
            <img src="@Img(Model.ImageUrl)" alt="@Model.Name"
                 class="w-full h-full object-cover"
                 onerror="this.src='@Url.Content("~/images/placeholders/product.png")'">
        </div>

        <div class="flex-1 min-w-0">
            <div class="font-medium text-gray-900 truncate">@Model.Name</div>
            <div class="text-xs text-gray-500">
                <span class="inline-flex items-center gap-1">
                    <i class="fa-solid fa-tag text-blue-600"></i>
                    @unit.ToString("#,0") ₫
                </span>
                <span class="mx-1 text-gray-300">•</span>
                <span class="inline-flex items-center gap-1">
                    <i class="fa-solid fa-box text-blue-600"></i>
                    x@qty
                </span>
            </div>
        </div>

        <div class="text-right">
            <div class="text-sm text-gray-500">Tổng</div>
            <div class="text-base font-semibold text-gray-900">@total.ToString("#,0") ₫</div>
        </div>
    </div>

    <style>
        /* Hiệu ứng glass/3D nhẹ, đồng bộ với Checkout */
        .card-glass {
            background: rgba(255,255,255,.92);
            backdrop-filter: blur(10px) saturate(160%);
        }

        .ring-3d {
            box-shadow: inset 0 1px 0 rgba(255,255,255,.6),0 10px 30px rgba(2,6,23,.06);
        }
    </style>
}
