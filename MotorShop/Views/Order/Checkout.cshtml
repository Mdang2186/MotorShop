@model MotorShop.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh toán";
    var subtotal = Model.CartItems.Sum(item => item.Subtotal);
    // Giả định phí vận chuyển, bạn có thể thay đổi logic này sau
    var shippingFee = subtotal > 10000000 ? 0 : 50000;
    var totalAmount = subtotal + shippingFee;
}

<div class="bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <nav class="text-sm text-gray-500 mb-8" aria-label="Breadcrumb">
            <ol class="list-none p-0 inline-flex space-x-2">
                <li class="flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="hover:text-blue-600">Trang chủ</a>
                    <i class="fas fa-chevron-right mx-2"></i>
                </li>
                <li class="flex items-center">
                    <a asp-controller="Cart" asp-action="Index" class="hover:text-blue-600">Giỏ hàng</a>
                    <i class="fas fa-chevron-right mx-2"></i>
                </li>
                <li class="font-medium text-gray-700">@ViewData["Title"]</li>
            </ol>
        </nav>

        <div class="text-center mb-10">
            <h1 class="text-3xl font-extrabold text-gray-900">Hoàn tất Đơn hàng</h1>
            <p class="mt-2 text-md text-gray-500">Vui lòng kiểm tra lại thông tin trước khi xác nhận.</p>
        </div>

        <form asp-action="Checkout" method="post">
            <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">

                <div class="lg:col-span-3">
                    <div class="bg-white p-6 rounded-xl border shadow-sm">
                        <h2 class="text-lg font-bold text-gray-800 border-b pb-4 mb-6">Thông tin giao hàng</h2>
                        <div class="space-y-6">
                            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                            <div>
                                <label asp-for="CustomerName" class="block text-sm font-medium text-gray-700"></label>
                                <div class="mt-1">
                                    <input asp-for="CustomerName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                    <span asp-validation-for="CustomerName" class="text-sm text-red-600"></span>
                                </div>
                            </div>
                            <div>
                                <label asp-for="ShippingPhone" class="block text-sm font-medium text-gray-700"></label>
                                <div class="mt-1">
                                    <input asp-for="ShippingPhone" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                    <span asp-validation-for="ShippingPhone" class="text-sm text-red-600"></span>
                                </div>
                            </div>
                            <div>
                                <label asp-for="ShippingAddress" class="block text-sm font-medium text-gray-700"></label>
                                <div class="mt-1">
                                    <textarea asp-for="ShippingAddress" rows="3" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"></textarea>
                                    <span asp-validation-for="ShippingAddress" class="text-sm text-red-600"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="lg:col-span-2">
                    <div class="bg-white p-6 rounded-xl border shadow-sm sticky top-24">
                        <h2 class="text-lg font-bold text-gray-800 border-b pb-4 mb-6">Tóm tắt đơn hàng</h2>

                        <div class="space-y-4 max-h-64 overflow-y-auto pr-2">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="flex items-center space-x-4">
                                    <div class="relative flex-shrink-0">
                                        <img src="@(item.ImageUrl ?? "https://placehold.co/100x100/e2e8f0/adb5bd?text=N/A")"
                                             alt="@item.ProductName" class="w-16 h-16 rounded-md object-cover border">
                                        <span class="absolute -top-2 -right-2 bg-gray-700 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">@item.Quantity</span>
                                    </div>
                                    <div class="flex-grow">
                                        <p class="font-medium text-sm text-gray-800 leading-tight">@item.ProductName</p>
                                    </div>
                                    <p class="text-sm text-gray-600 font-semibold">@item.Subtotal.ToString("N0") đ</p>
                                </div>
                            }
                        </div>

                        <div class="border-t mt-6 pt-6 space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Tạm tính</span>
                                <span class="font-medium text-gray-900">@subtotal.ToString("N0") đ</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Phí vận chuyển</span>
                                <span class="font-medium text-gray-900">@(shippingFee == 0 ? "Miễn phí" : shippingFee.ToString("N0") + " đ")</span>
                            </div>
                            <div class="border-t my-2"></div>
                            <div class="flex justify-between text-lg font-bold text-gray-900">
                                <span>Tổng cộng</span>
                                <span class="text-red-600">@totalAmount.ToString("N0") đ</span>
                            </div>
                        </div>

                        <div class="mt-6">
                            <button type="submit" class="w-full text-center py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
                                <i class="fas fa-lock mr-2"></i>Xác nhận Đặt hàng
                            </button>
                        </div>
                        <p class="text-xs text-gray-500 text-center mt-4">
                            Bằng việc nhấn nút, bạn đã đồng ý với <a href="#" class="underline">Điều khoản & Điều kiện</a> của chúng tôi.
                        </p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>