@model MotorShop.Models.Enums.OrderStatus
@{
    string txt = Model.ToString();
    string bg = "bg-gray-100 text-gray-700";
    switch (Model)
    {
        case MotorShop.Models.Enums.OrderStatus.Pending: bg = "bg-yellow-100 text-yellow-800"; break;
        case MotorShop.Models.Enums.OrderStatus.Processing: bg = "bg-blue-100 text-blue-800"; break;
        case MotorShop.Models.Enums.OrderStatus.Confirmed: bg = "bg-indigo-100 text-indigo-800"; break;
        case MotorShop.Models.Enums.OrderStatus.Shipping: bg = "bg-sky-100 text-sky-800"; break;
        case MotorShop.Models.Enums.OrderStatus.Delivered: bg = "bg-emerald-100 text-emerald-800"; break;
        case MotorShop.Models.Enums.OrderStatus.Completed: bg = "bg-green-100 text-green-800"; break;
        case MotorShop.Models.Enums.OrderStatus.Cancelled: bg = "bg-rose-100 text-rose-800"; break;
    }
}
<span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold @bg">@txt</span>
