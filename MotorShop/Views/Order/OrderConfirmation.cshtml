@model int

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center py-20">
    <h1 class="text-2xl font-bold text-green-600 mb-4">Đặt hàng thành công!</h1>
    <p class="text-gray-700">Cảm ơn bạn đã mua hàng. Mã đơn hàng của bạn là: <strong>#@Model</strong></p>
    <div class="mt-8">
        <a asp-controller="Products" asp-action="Index" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700">
            Tiếp tục mua sắm
        </a>
    </div>
</div>