@model MotorShop.Models.ApplicationUser?

<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
        <!-- Brand -->
        <div class="flex items-center gap-3">
            <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2">
                <div class="w-9 h-9 rounded-xl bg-blue-600 grid place-items-center text-white font-extrabold shadow-sm">M</div>
                <span class="font-extrabold text-lg tracking-tight">MotorShop</span>
            </a>
        </div>

        <!-- Search -->
        <div class="hidden md:block flex-1 px-6">
            <form asp-controller="Products" asp-action="Index" method="get" class="max-w-xl mx-auto">
                <div class="flex bg-white border border-gray-200 rounded-xl overflow-hidden">
                    <input name="q" type="search" placeholder="Tìm xe, hãng…"
                           class="w-full px-3 py-2 outline-none"
                           value="@(Context.Request.Query["q"])" />
                    <button type="submit" class="px-3 bg-blue-600 hover:bg-blue-700 text-white">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Actions -->
        <div class="flex items-center gap-3">
            <a asp-controller="Products" asp-action="Index" class="hidden sm:inline-block text-sm font-medium text-gray-700 hover:text-blue-700">
                Sản phẩm
            </a>
            <a asp-controller="Order" asp-action="History" class="hidden sm:inline-block text-sm font-medium text-gray-700 hover:text-blue-700">
                Đơn hàng
            </a>

            <a asp-controller="Cart" asp-action="Index" class="relative inline-flex items-center px-3 py-1.5 rounded-lg border border-gray-200 hover:border-blue-500">
                <i class="fa-solid fa-cart-shopping"></i>
                <span class="ml-2 hidden md:inline">Giỏ hàng</span>
                <span id="cart-badge" class="absolute -top-2 -right-2 text-xs bg-blue-600 text-white rounded-full px-1.5 py-0.5 hidden">0</span>
            </a>

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="relative group">
                    <button class="inline-flex items-center gap-2">
                        <img src="@(string.IsNullOrWhiteSpace(Model?.AvatarUrl) ? Url.Content("~/images/avatars/default.png") : Model!.AvatarUrl)"
                             class="w-8 h-8 rounded-full object-cover border border-gray-200" />
                        <span class="hidden md:inline text-sm font-semibold">@((Model?.FullName ?? User.Identity!.Name) ?? "Tài khoản")</span>
                        <i class="fa-solid fa-chevron-down text-xs text-gray-500"></i>
                    </button>
                    <div class="absolute right-0 mt-2 w-56 bg-white border border-gray-200 rounded-xl shadow-xl p-2 hidden group-hover:block">
                        <a asp-controller="Manage" asp-action="Index" class="block px-3 py-2 rounded-lg hover:bg-gray-50">
                            <i class="fa-regular fa-user mr-2"></i> Hồ sơ cá nhân
                        </a>
                        <a asp-controller="Manage" asp-action="Email" class="block px-3 py-2 rounded-lg hover:bg-gray-50">
                            <i class="fa-regular fa-envelope mr-2"></i> Email & bảo mật
                        </a>
                        <a asp-controller="Manage" asp-action="ChangePassword" class="block px-3 py-2 rounded-lg hover:bg-gray-50">
                            <i class="fa-solid fa-key mr-2"></i> Đổi mật khẩu
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-1">
                            <button type="submit" class="w-full text-left px-3 py-2 rounded-lg hover:bg-gray-50">
                                <i class="fa-solid fa-right-from-bracket mr-2"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="text-sm font-semibold text-gray-700 hover:text-blue-700">Đăng nhập</a>
                <a asp-controller="Account" asp-action="Register" class="text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 px-3 py-1.5 rounded-lg">Đăng ký</a>
            }
        </div>
    </div>
</nav>
