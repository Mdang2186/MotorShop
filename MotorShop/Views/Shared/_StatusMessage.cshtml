@model string?

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Lỗi") ? "danger" : "success";
    <div class="p-4 mb-4 text-sm rounded-lg @(statusMessageClass == "success" ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")" role="alert">
        @Model
    </div>
}