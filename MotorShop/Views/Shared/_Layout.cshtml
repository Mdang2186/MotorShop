@using MotorShop.Utilities
@{
    // 1. Helper xác định menu active
    var ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    bool Active(string name) => ctrl == name.ToLowerInvariant();

    // Thêm whitespace-nowrap để text menu không bao giờ bị xuống dòng
    string NavClass(string name) => (Active(name) ? "text-blue-600 font-bold" : "text-slate-600 hover:text-blue-600 font-medium")
                                    + " px-3 py-2 rounded-md text-sm transition whitespace-nowrap";

    // 2. Xử lý Toast Notification
    string? toast = TempData[SD.Temp_Success] as string ?? TempData[SD.Temp_Info] as string ?? TempData[SD.Temp_Warning] as string ?? TempData[SD.Temp_Error] as string;
    string toastType = TempData[SD.Temp_Success] != null ? "success" : TempData[SD.Temp_Info] != null ? "info" : TempData[SD.Temp_Warning] != null ? "warning" : "error";
    string ToastBg(string t) => t switch
    {
        "success" => "from-emerald-500 to-emerald-600 shadow-emerald-300/40",
        "info" => "from-blue-600 to-blue-700 shadow-blue-300/40",
        "warning" => "from-amber-500 to-amber-600 shadow-amber-300/40",
        _ => "from-rose-500 to-rose-600 shadow-rose-300/40"
    };
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MotorShop</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Head", required: false)

    <style>
        /* Nền trang */
        body.bg-future {
            background: radial-gradient(900px 600px at 12% 8%, #eaf2ff 0, transparent 60%), radial-gradient(900px 600px at 88% 6%, #e6fbff 0, transparent 62%), linear-gradient(180deg, #ffffff 0, #f7fbff 100%);
        }

        .nav-glass {
            background: rgba(255, 255, 255, .95);
            backdrop-filter: blur(6px);
        }

        /* === CSS HIỆU ỨNG NÚT AI (VIỀN XOAY CẦU VỒNG) === */

        /* 1. Định nghĩa animation xoay */
        @@keyframes spin-gradient {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* 2. Container bọc ngoài (Tạo hình dáng viên thuốc) */
        .ai-btn-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden; /* Cắt phần thừa của gradient xoay */
            border-radius: 999px;
            padding: 2px; /* ĐỘ DÀY VIỀN MÀU (Khoảng cách giữa inner và outer) */
            cursor: pointer;
            text-decoration: none;
            transition: transform 0.2s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

            .ai-btn-wrapper:hover {
                transform: scale(1.02); /* Phóng to nhẹ khi hover */
                box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
            }

            /* 3. Lớp giả tạo nền gradient xoay (Nằm dưới cùng) */
            .ai-btn-wrapper::before {
                content: "";
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%; /* To hơn nút để khi xoay vẫn phủ kín */
                /* Dải màu cầu vồng giống Google */
                background: conic-gradient( #ea4335, #fbbc04, #34a853, #4285f4, #9b72cb, #ea4335 );
                animation: spin-gradient 3s linear infinite; /* Xoay liên tục */
                z-index: 0;
            }

        /* 4. Lớp nội dung bên trong (Nền trắng đè lên) */
        .ai-btn-inner {
            position: relative;
            z-index: 1;
            background: white; /* Che gradient ở giữa */
            width: 100%;
            height: 100%;
            border-radius: 999px; /* Bo tròn trùng khớp wrapper */
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px; /* Khoảng cách lề trong nút */
        }

        /* 5. Chữ Gradient đẹp mắt */
        .ai-text-gradient {
            background: linear-gradient(90deg, #4f46e5, #ec4899);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-weight: 700;
        }
    </style>
</head>
<body class="bg-future text-slate-800 antialiased">

    <header class="sticky top-0 z-50">
        <div class="nav-glass border-b border-slate-100 shadow-sm/50 shadow-[0_5px_25px_rgba(15,23,42,0.04)]">
            <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 items-center justify-between gap-4">

                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 shrink-0" aria-label="Về trang chủ">
                        <div class="relative">
                            <div class="w-9 h-9 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 grid place-items-center text-white shadow-lg">
                                <i class="fa-solid fa-motorcycle text-sm"></i>
                            </div>
                            <div class="absolute inset-0 rounded-xl bg-blue-400/40 blur-md -z-10"></div>
                        </div>
                        <div class="leading-tight hidden sm:block">
                            <span class="block font-extrabold text-lg tracking-tight text-slate-900">
                                Motor<span class="text-blue-600">Shop</span>
                            </span>
                        </div>
                    </a>

                    <form id="global-search-form" asp-controller="Products" asp-action="Index" method="get"
                          class="hidden md:flex flex-1 max-w-xl items-center relative z-10" role="search">

                        <div class="w-full flex items-center bg-white rounded-full border border-slate-200 shadow-sm focus-within:shadow-md transition-all p-1">

                            <div class="pl-3 text-slate-400">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </div>

                            <input id="global-search-input"
                                   name="searchString"
                                   type="search"
                                   autocomplete="off"
                                   placeholder="Tìm xe, hãng, dòng…"
                                   class="w-full bg-transparent border-none py-1.5 px-3 text-sm text-slate-700 placeholder-slate-400 focus:ring-0 focus:outline-none" />

                            <a href="@Url.Action("Index", "Ai")" class="ai-btn-wrapper mr-0.5" title="Hỏi trợ lý ảo AI">
                                <div class="ai-btn-inner">
                                    <i class="fa-solid fa-wand-magic-sparkles text-sm text-indigo-500"></i>
                                    <span class="text-xs ai-text-gradient whitespace-nowrap">Chế độ AI</span>
                                </div>
                            </a>

                        </div>
                    </form>

                    <div class="flex items-center gap-1 sm:gap-2 shrink-0">
                        <div class="hidden lg:flex items-center space-x-1">
                            <a asp-controller="Home" asp-action="Index" class="@NavClass("home")">Trang chủ</a>
                            <a asp-controller="Products" asp-action="Index" class="@NavClass("products")">Sản phẩm</a>
                            <a asp-controller="Order" asp-action="History" class="@NavClass("order")">Đơn hàng</a>
                        </div>

                        <a asp-controller="Cart" asp-action="Index"
                           class="relative inline-flex items-center gap-2 px-2.5 py-2 rounded-xl hover:bg-slate-50 text-slate-700"
                           aria-label="Giỏ hàng">
                            <i class="fa-solid fa-cart-shopping text-lg"></i>
                            <span id="cart-badge"
                                  class="min-w-[20px] px-1.5 h-5 text-[10px] grid place-items-center rounded-full bg-blue-600 text-white shadow">
                                0
                            </span>
                        </a>

                        <partial name="_LoginPartial" />

                        <button id="mobile-menu-button" class="lg:hidden p-2 text-slate-600 hover:text-blue-600">
                            <i class="fa-solid fa-bars text-lg"></i>
                        </button>
                    </div>
                </div>
            </nav>
        </div>

        <div id="mobile-menu" class="lg:hidden hidden bg-white border-b border-slate-100">
            <div class="px-4 py-3 space-y-2">
                <a href="@Url.Action("Index", "Ai")" class="block w-full text-center py-2 rounded-lg bg-indigo-50 text-indigo-700 font-bold border border-indigo-100">
                    <i class="fa-solid fa-wand-magic-sparkles mr-2"></i> Chế độ AI
                </a>
                <a asp-controller="Home" asp-action="Index" class="block py-2 text-slate-700 font-medium">Trang chủ</a>
                <a asp-controller="Products" asp-action="Index" class="block py-2 text-slate-700 font-medium">Sản phẩm</a>
            </div>
        </div>
    </header>

    <main role="main" class="relative">
        @RenderBody()
    </main>

    <partial name="_FooterPartial" />

    <div id="notification"
         class="fixed top-[84px] right-5 z-[1000] min-w-[280px] max-w-sm transition-all duration-500 ease-in-out
              @(toast == null ? "opacity-0 translate-x-full pointer-events-none" : "opacity-100 translate-x-0")">
        @if (toast != null)
        {
            <div class="flex items-start gap-3 text-white px-4 py-3 rounded-2xl shadow-2xl bg-gradient-to-br @ToastBg(toastType)">
                <i class="fa-solid @(toastType == "success" ? "fa-circle-check" : toastType == "info" ? "fa-circle-info" : toastType == "warning" ? "fa-triangle-exclamation" : "fa-circle-exclamation") text-xl mt-0.5"></i>
                <div class="toast-text text-sm leading-5">@toast</div>
            </div>
        }
    </div>

    <form id="af-global" class="hidden">@Html.AntiForgeryToken()</form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // === TOAST HELPER ===
        window.getCsrf = () => document.querySelector('#af-global input[name="__RequestVerificationToken"]')?.value || '';

        window.showToast = (msg, type = "info") => {
          const toast = document.getElementById('notification');
          if (!toast) return alert(msg);

          // Template HTML cho toast
          let box = toast.querySelector('.bg-gradient-to-br');
          if (!box) {
             toast.innerHTML = '<div class="flex items-start gap-3 text-white px-4 py-3 rounded-2xl shadow-2xl bg-gradient-to-br"><i class="fa-solid fa-circle-info text-xl mt-0.5"></i><div class="toast-text text-sm leading-5"></div></div>';
             box = toast.querySelector('.bg-gradient-to-br');
          }

          // Set màu sắc
          const map = {
            success: 'from-emerald-500 to-emerald-600 shadow-emerald-300/40',
            warning: 'from-amber-500 to-amber-600 shadow-amber-300/40',
            error:   'from-rose-500 to-rose-600 shadow-rose-300/40',
            info:    'from-blue-600 to-blue-700 shadow-blue-300/40'
          };
          box.className = 'flex items-start gap-3 text-white px-4 py-3 rounded-2xl shadow-2xl bg-gradient-to-br ' + (map[type] || map.info);

          // Set Icon & Text
          const icon = box.querySelector('i');
          icon.className = 'fa-solid ' + (type==='success' ? 'fa-circle-check' : type==='warning' ? 'fa-triangle-exclamation' : type==='error' ? 'fa-circle-exclamation' : 'fa-circle-info') + ' text-xl mt-0.5';
          box.querySelector('.toast-text').textContent = msg || '';

          // Hiển thị
          toast.classList.remove('pointer-events-none','opacity-0','translate-x-full');
          toast.classList.add('opacity-100','translate-x-0');

          // Tự ẩn sau 3.4s
          clearTimeout(window.__toastTimer);
          window.__toastTimer = setTimeout(()=>{
            toast.classList.add('opacity-0','translate-x-full');
          }, 3400);
        };

        // === CART HELPER ===
        window.refreshCartBadge = async () => {
          try {
            const r = await fetch('@Url.Action("Summary", "Cart")', { headers: { 'Accept':'application/json' }});
            const j = await r.json();
            const el = document.getElementById('cart-badge');
            if (el) el.textContent = j.cartCount ?? 0;
          } catch {}
        };

        // Sự kiện thêm vào giỏ hàng
        document.addEventListener('click', async (e) => {
          const btn = e.target.closest('[data-add-to-cart]');
          if (!btn) return;
          e.preventDefault(); e.stopPropagation();

          const pid = Number(btn.getAttribute('data-id'));
          const qty = Number(btn.getAttribute('data-qty') || '1');
          const html = btn.innerHTML;

          btn.disabled = true;
          btn.classList.add('opacity-70');
          btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i><span>...</span>';

          try {
            const res = await fetch('@Url.Action("AddToCart", "Cart")', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json', 'Accept': 'application/json', 'RequestVerificationToken': getCsrf() },
              body: JSON.stringify({ productId: pid, quantity: qty })
            });

            let j = {};
            const ct = res.headers.get('content-type') || '';
            if (ct.includes('application/json')) j = await res.json();

            if (res.ok && j.success) {
                showToast(j.message || 'Đã thêm vào giỏ', 'success');
                refreshCartBadge();
            } else {
                showToast(j.message || 'Không thể thêm vào giỏ', 'error');
            }
          } catch {
              showToast('Lỗi kết nối.', 'error');
          } finally {
              btn.disabled = false;
              btn.classList.remove('opacity-70');
              btn.innerHTML = html;
          }
        });

        // Init Cart Badge
        window.addEventListener('DOMContentLoaded', refreshCartBadge);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("ChatWidget")
</body>
</html>