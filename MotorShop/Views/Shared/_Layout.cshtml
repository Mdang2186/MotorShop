<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MotorShop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    <header class="sticky top-0 z-40 sticky-header border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <a asp-controller="Home" asp-action="Index" class="flex items-center">
                    <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center mr-3"><i class="fas fa-motorcycle text-white text-lg"></i></div>
                    <div><h1 class="text-xl font-bold text-blue-600">MotorShop</h1><p class="text-xs text-gray-500">Xe máy chính hãng</p></div>
                </a>
                <nav class="hidden lg:flex items-center space-x-6">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-gray-700 hover:text-blue-600 font-medium">Trang chủ</a>
                    <a asp-controller="Products" asp-action="Index" class="nav-link text-gray-700 hover:text-blue-600 font-medium">Sản phẩm</a>
                    <a asp-controller="Order" asp-action="History" class="nav-link text-gray-700 hover:text-blue-600 font-medium">Đơn hàng</a>
                </nav>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center border-t border-gray-800 pt-6">
            <p class="text-gray-400 text-sm">&copy; @DateTime.Now.Year - MotorShop</p>
        </div>
    </footer>

    <div id="notification" class="notification"><div class="flex items-center"><i class="fas fa-check-circle mr-2"></i><span id="notificationText"></span></div></div>

    <div id="productModal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 flex items-center justify-center p-4" onclick="closeModal('productModal')">
        <div id="productModalContent" class="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto shadow-xl" onclick="event.stopPropagation()">
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>