@model MotorShop.ViewModels.Account.LoginViewModel
@using MotorShop.Utilities
@{
    ViewData["Title"] = "Đăng nhập tài khoản";
    var returnUrl = Model?.ReturnUrl ?? Url.Content("~/");
}

<section class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md text-center">
        <a asp-controller="Home" asp-action="Index" class="inline-block">
            <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center mx-auto shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 7h-1.382l-.724-1.447A2 2 0 0 0 15.118 4H10a2 2 0 0 0-1.789 1.106L7.447 7H6a3 3 0 0 0-3 3v1h2a3 3 0 0 1 3 3v1H6a3 3 0 1 0 0 2h3a1 1 0 0 0 1-1v-2a3 3 0 0 1 3-3h4.535A3.5 3.5 0 1 0 21 9.5V9a2 2 0 0 0-2-2ZM6 18.5A1.5 1.5 0 1 1 4.5 17 1.5 1.5 0 0 1 6 18.5Zm12-3A1.5 1.5 0 1 1 19.5 14 1.5 1.5 0 0 1 18 15.5Z" />
                </svg>
            </div>
        </a>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h2>
        <p class="mt-2 text-sm text-gray-600">
            Chưa có tài khoản?
            <a asp-controller="Account" asp-action="Register" class="font-medium text-blue-600 hover:text-blue-500">
                Đăng ký ngay
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white/90 backdrop-blur py-8 px-6 shadow-xl border border-gray-100 rounded-2xl sm:px-10">

            <!-- TempData alerts -->
            @if (TempData[SD.Temp_Success] is string ok)
            {
                <div class="mb-4 rounded-md bg-green-50 p-4 text-green-700">@ok</div>
            }
            @if (TempData[SD.Temp_Info] is string inf)
            {
                <div class="mb-4 rounded-md bg-blue-50 p-4 text-blue-700">@inf</div>
            }
            @if (TempData[SD.Temp_Warning] is string warn)
            {
                <div class="mb-4 rounded-md bg-yellow-50 p-4 text-yellow-800">@warn</div>
            }
            @if (TempData[SD.Temp_Error] is string er)
            {
                <div class="mb-4 rounded-md bg-red-50 p-4 text-red-700">@er</div>
            }

            <form asp-action="Login" asp-route-returnurl="@returnUrl" method="post" class="space-y-6" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <!-- Validation summary -->
                <div asp-validation-summary="ModelOnly" class="hidden"></div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="rounded-md bg-red-50 p-4 mb-2">
                        <div class="text-sm text-red-700">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    </div>
                }

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1">
                        <input asp-for="Email" autocomplete="username email" placeholder="you@example.com"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative">
                        <input asp-for="Password" autocomplete="current-password" id="pwd"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm pr-10" />
                        <button type="button" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                aria-label="Hiển thị/ẩn mật khẩu" onclick="togglePwd('pwd', this)">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                        <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900"></label>
                    </div>
                    <div class="text-sm">
                        <a asp-controller="Account" asp-action="ForgotPassword" class="font-medium text-blue-600 hover:text-blue-500">
                            Quên mật khẩu?
                        </a>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 rounded-xl shadow-sm text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Đăng nhập
                    </button>
                </div>
            </form>

            <!-- OTP tools -->
            <div class="mt-6 pt-6 border-t border-gray-100 space-y-3">
                <form asp-action="ResendEmailCode" method="post" class="sm:flex sm:space-x-3">
                    @Html.AntiForgeryToken()
                    <input type="email" name="email" value="@Model?.Email" required
                           placeholder="Nhập email để nhận lại mã 6 số"
                           class="flex-1 block w-full px-3 py-2 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <button type="submit"
                            class="mt-3 sm:mt-0 w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-xl shadow-sm text-sm font-medium bg-white text-gray-700 hover:bg-gray-50">
                        Gửi lại mã xác nhận
                    </button>
                </form>

                <div class="text-center">
                    <a asp-action="VerifyEmailCode" asp-route-email="@Model?.Email"
                       class="text-sm font-medium text-blue-600 hover:text-blue-500">
                        Đã có mã? Nhập mã để kích hoạt
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd(id, btn) {
            const el = document.getElementById(id);
            if (!el) return;
            el.type = el.type === 'password' ? 'text' : 'password';
            btn.innerHTML = el.type === 'password' ? '<i class="fa-regular fa-eye"></i>' : '<i class="fa-regular fa-eye-slash"></i>';
        }
    </script>
}
