@model MotorShop.ViewModels.UpdateProfileViewModel
@using MotorShop.Utilities
@{
    ViewData["Title"] = "Hồ sơ tài khoản";
    var email = ViewBag.Email as string ?? "";
}

<section class="bg-gray-50 py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-6">
            <h1 class="text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
            <p class="text-sm text-gray-600">Cập nhật thông tin cá nhân để mua sắm nhanh hơn.</p>
        </div>

        <!-- Alerts -->
        @if (TempData[SD.Temp_Success] is string ok)
        {
            <div class="mb-4 rounded-xl bg-green-50 border border-green-200 p-4 text-green-800">@ok</div>
        }
        @if (TempData[SD.Temp_Info] is string inf)
        {
            <div class="mb-4 rounded-xl bg-blue-50 border border-blue-200 p-4 text-blue-800">@inf</div>
        }
        @if (TempData[SD.Temp_Warning] is string warn)
        {
            <div class="mb-4 rounded-xl bg-yellow-50 border border-yellow-200 p-4 text-yellow-900">@warn</div>
        }
        @if (TempData[SD.Temp_Error] is string er)
        {
            <div class="mb-4 rounded-xl bg-red-50 border border-red-200 p-4 text-red-700">@er</div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Sidebar quick actions -->
            <aside class="lg:col-span-1 space-y-4">
                <!-- Email card -->
                <div class="bg-white/90 backdrop-blur rounded-2xl border border-gray-100 shadow-sm p-5">
                    <div class="flex items-start justify-between">
                        <div>
                            <h3 class="text-sm font-semibold text-gray-700">Email đăng nhập</h3>
                            <p class="mt-1 text-sm text-gray-800 break-all">@email</p>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-blue-600 grid place-items-center text-white">
                            <i class="fa-solid fa-envelope-open"></i>
                        </div>
                    </div>
                    <div class="mt-4 flex flex-col gap-2">
                        <a asp-action="ChangeEmail"
                           class="inline-flex justify-center items-center gap-2 px-3 py-2 rounded-xl border text-sm hover:bg-gray-50">
                            <i class="fa-solid fa-at"></i> Đổi email
                        </a>

                        <form asp-action="ResendMyEmailCode" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="mt-2 w-full inline-flex justify-center items-center gap-2 px-3 py-2 rounded-xl bg-blue-600 text-white text-sm hover:bg-blue-700">
                                <i class="fa-solid fa-paper-plane"></i> Gửi lại mã xác minh
                            </button>
                        </form>
                        <p class="text-xs text-gray-500 mt-1">
                            Nếu email đã được xác minh, hệ thống sẽ thông báo trong giây lát.
                        </p>
                    </div>
                </div>

                <!-- Security card -->
                <div class="bg-white/90 backdrop-blur rounded-2xl border border-gray-100 shadow-sm p-5">
                    <div class="flex items-start justify-between">
                        <div>
                            <h3 class="text-sm font-semibold text-gray-700">Bảo mật</h3>
                            <p class="mt-1 text-sm text-gray-600">Quản lý mật khẩu của bạn.</p>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-blue-600 grid place-items-center text-white">
                            <i class="fa-solid fa-shield-halved"></i>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a asp-action="ChangePassword"
                           class="w-full inline-flex justify-center items-center gap-2 px-3 py-2 rounded-xl border text-sm hover:bg-gray-50">
                            <i class="fa-solid fa-key"></i> Đổi mật khẩu
                        </a>
                    </div>
                </div>

                <!-- Tips -->
                <div class="bg-white/80 rounded-2xl border border-gray-100 shadow-sm p-5">
                    <h3 class="text-sm font-semibold text-gray-700">Mẹo bảo mật</h3>
                    <ul class="mt-2 text-sm text-gray-600 list-disc ml-5 space-y-1">
                        <li>Dùng mật khẩu riêng cho MotorShop.</li>
                        <li>Bật khoá thiết bị, hạn chế đăng nhập nơi công cộng.</li>
                        <li>Kiểm tra email xác minh khi đổi thông tin nhạy cảm.</li>
                    </ul>
                </div>
            </aside>

            <!-- Main form -->
            <div class="lg:col-span-2">
                <div class="bg-white/90 backdrop-blur rounded-2xl border border-gray-100 shadow-sm p-6">
                    <h2 class="text-xl font-bold text-gray-900">Thông tin cá nhân</h2>
                    <p class="text-sm text-gray-600">Các trường có thể cập nhật bất cứ lúc nào.</p>

                    <form asp-action="UpdateProfile" method="post" class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="hidden"></div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="sm:col-span-2 rounded-md bg-red-50 p-4 mb-2 text-sm text-red-700">
                                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@err.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="sm:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Email (không thể sửa tại đây)</label>
                            <input type="email" value="@email" readonly
                                   class="mt-1 block w-full rounded-xl border-gray-200 bg-gray-50 text-gray-700 shadow-sm" />
                        </div>

                        <div class="sm:col-span-2">
                            <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="FullName" placeholder="Họ và tên"
                                   class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FullName" class="text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="PhoneNumber" placeholder="09xx xxx xxx" autocomplete="tel"
                                   class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="PhoneNumber" class="text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="Address" placeholder="Địa chỉ nhận hàng"
                                   class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="Address" class="text-sm text-red-600"></span>
                        </div>

                        <div class="sm:col-span-2 pt-2">
                            <button type="submit"
                                    class="w-full inline-flex justify-center items-center gap-2 py-3 rounded-xl shadow-sm text-white bg-blue-600 hover:bg-blue-700 font-semibold">
                                <i class="fa-solid fa-floppy-disk"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>

                    <div class="mt-6 text-xs text-gray-500">
                        Thay đổi email? Hãy dùng mục <b>Đổi email</b> ở khối bên trái để nhận liên kết xác nhận.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
