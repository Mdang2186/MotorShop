@model MotorShop.ViewModels.ChangePasswordViewModel
@using MotorShop.Utilities
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<section class="min-h-screen bg-gray-50 flex items-center py-12 sm:px-6 lg:px-8">
    <div class="mx-auto w-full max-w-lg">
        <div class="bg-white/90 backdrop-blur border border-gray-100 shadow-xl rounded-2xl p-6 sm:p-8">
            <div class="text-center">
                <div class="w-16 h-16 bg-blue-600 rounded-xl grid place-items-center mx-auto shadow-lg">
                    <i class="fa-solid fa-key text-white text-2xl"></i>
                </div>
                <h1 class="mt-4 text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
                <p class="mt-2 text-sm text-gray-600">
                    Đặt mật khẩu mới để bảo vệ tài khoản MotorShop tốt hơn.
                </p>
            </div>

            <!-- TempData alerts -->
            @if (TempData[SD.Temp_Success] is string ok)
            {
                <div class="mt-4 rounded-md bg-green-50 p-4 text-green-700">@ok</div>
            }
            @if (TempData[SD.Temp_Info] is string inf)
            {
                <div class="mt-4 rounded-md bg-blue-50 p-4 text-blue-700">@inf</div>
            }
            @if (TempData[SD.Temp_Warning] is string warn)
            {
                <div class="mt-4 rounded-md bg-yellow-50 p-4 text-yellow-800">@warn</div>
            }
            @if (TempData[SD.Temp_Error] is string er)
            {
                <div class="mt-4 rounded-md bg-red-50 p-4 text-red-700">@er</div>
            }

            <form asp-action="ChangePassword" method="post" class="mt-6 space-y-6" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="hidden"></div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="rounded-md bg-red-50 p-4 mb-2 text-sm text-red-700">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@err.ErrorMessage</div>
                        }
                    </div>
                }

                <!-- Old password -->
                <div>
                    <label asp-for="OldPassword" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative">
                        <input asp-for="OldPassword" id="oldPwd"
                               autocomplete="current-password"
                               class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                        <button type="button"
                                class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                onclick="togglePwd('oldPwd', this)" aria-label="Hiển thị/ẩn mật khẩu cũ">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="OldPassword" class="text-sm text-red-600"></span>
                </div>

                <!-- New password -->
                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative">
                        <input asp-for="NewPassword" id="newPwd"
                               autocomplete="new-password"
                               class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                        <button type="button"
                                class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                onclick="togglePwd('newPwd', this)" aria-label="Hiển thị/ẩn mật khẩu mới">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-sm text-red-600"></span>
                    <p class="mt-1 text-xs text-gray-500">
                        Gợi ý: tối thiểu 6–8 ký tự; nên có chữ hoa, chữ thường và số.
                    </p>
                </div>

                <!-- Confirm -->
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative">
                        <input asp-for="ConfirmPassword" id="newPwd2"
                               autocomplete="new-password"
                               class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                        <button type="button"
                                class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                onclick="togglePwd('newPwd2', this)" aria-label="Hiển thị/ẩn xác nhận mật khẩu">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full inline-flex justify-center items-center gap-2 py-3 rounded-xl shadow-sm text-white bg-blue-600 hover:bg-blue-700 font-semibold">
                    <i class="fa-solid fa-floppy-disk"></i> Lưu mật khẩu mới
                </button>

                <div class="text-center text-sm text-gray-500">
                    Quay lại <a asp-action="Manage" class="text-blue-600 hover:text-blue-500 font-medium">Hồ sơ</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd(id, btn) {
            const el = document.getElementById(id);
            if (!el) return;
            el.type = el.type === 'password' ? 'text' : 'password';
            btn.innerHTML = el.type === 'password'
                ? '<i class="fa-regular fa-eye"></i>'
                : '<i class="fa-regular fa-eye-slash"></i>';
        }
    </script>
}
