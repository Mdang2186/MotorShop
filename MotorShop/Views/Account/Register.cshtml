@model MotorShop.ViewModels.Account.RegisterViewModel
@using MotorShop.Utilities
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<section class="min-h-screen bg-gradient-to-b from-white to-gray-50 flex items-center py-12 sm:px-6 lg:px-8">
    <div class="mx-auto w-full max-w-2xl">
        <div class="bg-white/90 backdrop-blur border border-gray-100 shadow-xl rounded-2xl overflow-hidden">
            <div class="px-6 py-6 sm:px-10 sm:py-8">
                <div class="text-center mb-6">
                    <div class="w-16 h-16 bg-blue-600 rounded-xl grid place-items-center mx-auto shadow-lg">
                        <i class="fa-solid fa-user-plus text-white text-2xl"></i>
                    </div>
                    <h1 class="mt-4 text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
                    <p class="mt-2 text-sm text-gray-600">
                        Đã có tài khoản?
                        <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:text-blue-500 font-medium">Đăng nhập</a>
                    </p>
                </div>

                <!-- TempData alerts -->
                @if (TempData[SD.Temp_Error] is string er)
                {
                    <div class="mb-4 rounded-md bg-red-50 p-4 text-red-700">@er</div>
                }
                @if (TempData[SD.Temp_Info] is string inf)
                {
                    <div class="mb-4 rounded-md bg-blue-50 p-4 text-blue-700">@inf</div>
                }

                <form asp-action="Register" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-4" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="md:col-span-2">
                        <div asp-validation-summary="ModelOnly" class="hidden"></div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="rounded-md bg-red-50 p-4 mb-2 text-sm text-red-700">
                                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@err.ErrorMessage</div>
                                }
                            </div>
                        }
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="FullName" placeholder="Họ và tên"
                               class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="FullName" class="text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Email" autocomplete="email" placeholder="you@example.com"
                               class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PhoneNumber" autocomplete="tel" placeholder="09xx xxx xxx"
                               class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="PhoneNumber" class="text-sm text-red-600"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Address" placeholder="Địa chỉ nhận hàng (có thể cập nhật sau)"
                               class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Address" class="text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                        <div class="mt-1 relative">
                            <input asp-for="Password" id="regPwd"
                                   class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                            <button type="button" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                    onclick="togglePwd('regPwd', this)" aria-label="Hiển thị/ẩn mật khẩu">
                                <i class="fa-regular fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                        <div class="mt-1 relative">
                            <input asp-for="ConfirmPassword" id="regPwd2"
                                   class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                            <button type="button" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                    onclick="togglePwd('regPwd2', this)" aria-label="Hiển thị/ẩn mật khẩu">
                                <i class="fa-regular fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                    </div>

                    <div class="md:col-span-2 pt-2">
                        <button type="submit"
                                class="w-full inline-flex justify-center items-center gap-2 py-3 rounded-xl shadow-sm text-white bg-blue-600 hover:bg-blue-700 font-semibold">
                            <i class="fa-solid fa-user-check"></i> Tạo tài khoản
                        </button>
                    </div>
                </form>

                <p class="mt-4 text-xs text-gray-500">
                    Bằng cách đăng ký, bạn đồng ý với các điều khoản sử dụng và chính sách bảo mật của MotorShop.
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd(id, btn) {
            const el = document.getElementById(id);
            if (!el) return;
            el.type = el.type === 'password' ? 'text' : 'password';
            btn.innerHTML = el.type === 'password' ? '<i class="fa-regular fa-eye"></i>' : '<i class="fa-regular fa-eye-slash"></i>';
        }
    </script>
}
