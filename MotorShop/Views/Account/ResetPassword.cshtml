@model MotorShop.ViewModels.ResetPasswordViewModel
@using MotorShop.Utilities
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    var token = ViewBag.Token as string ?? Model?.Token ?? "";
}

<section class="min-h-screen bg-gray-50 flex items-center py-12 sm:px-6 lg:px-8">
    <div class="mx-auto w-full max-w-lg">
        <div class="bg-white/90 backdrop-blur border border-gray-100 shadow-xl rounded-2xl p-6 sm:p-8">
            <div class="text-center">
                <div class="w-16 h-16 bg-blue-600 rounded-xl grid place-items-center mx-auto shadow-lg">
                    <i class="fa-solid fa-key text-white text-2xl"></i>
                </div>
                <h1 class="mt-4 text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
                <p class="mt-2 text-sm text-gray-600">
                    Tạo mật khẩu mới cho tài khoản <span class="font-medium text-gray-800">@Model?.Email</span>.
                </p>
            </div>

            <!-- TempData alerts -->
            @if (TempData[SD.Temp_Error] is string er)
            {
                <div class="mt-4 rounded-md bg-red-50 p-4 text-red-700">@er</div>
            }

            <form asp-action="ResetPassword" method="post" class="mt-6 space-y-6" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" name="token" value="@token" />
                <input type="hidden" asp-for="Email" />

                <div asp-validation-summary="ModelOnly" class="hidden"></div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="rounded-md bg-red-50 p-4 mb-2 text-sm text-red-700">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@err.ErrorMessage</div>
                        }
                    </div>
                }

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative">
                        <input asp-for="Password" id="newPwd"
                               class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                        <button type="button" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                onclick="togglePwd('newPwd', this)" aria-label="Hiển thị/ẩn mật khẩu">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                    <p class="mt-1 text-xs text-gray-500">Gợi ý: tối thiểu 6–8 ký tự, gồm chữ hoa, chữ thường, số.</p>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative">
                        <input asp-for="ConfirmPassword" id="newPwd2"
                               class="block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-10" />
                        <button type="button" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
                                onclick="togglePwd('newPwd2', this)" aria-label="Hiển thị/ẩn mật khẩu">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full inline-flex justify-center items-center gap-2 py-3 rounded-xl shadow-sm text-white bg-blue-600 hover:bg-blue-700 font-semibold">
                    <i class="fa-solid fa-rotate"></i> Đặt lại mật khẩu
                </button>

                <div class="text-center text-sm text-gray-500">
                    Quên email? <a asp-action="ForgotPassword" class="text-blue-600 hover:text-blue-500 font-medium">Gửi lại liên kết</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd(id, btn) {
            const el = document.getElementById(id);
            if (!el) return;
            el.type = el.type === 'password' ? 'text' : 'password';
            btn.innerHTML = el.type === 'password' ? '<i class="fa-regular fa-eye"></i>' : '<i class="fa-regular fa-eye-slash"></i>';
        }
    </script>
}
