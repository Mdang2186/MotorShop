@{
    ViewData["Title"] = "Xác nhận Đặt lại Mật khẩu";
}

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md text-center">
        <div class="flex items-center justify-center h-16 w-16 mx-auto bg-green-100 rounded-full mb-4">
            <i class="fas fa-check-circle text-3xl text-green-600"></i>
        </div>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
            Đặt lại mật khẩu thành công!
        </h2>
        <p class="mt-4 text-md text-gray-600">
            Bạn có thể đăng nhập bằng mật khẩu mới ngay bây giờ.
        </p>
        <div class="mt-8">
            <a asp-action="Login" class="font-medium text-blue-600 hover:text-blue-500">
                Đi đến trang Đăng nhập
            </a>
        </div>
    </div>
</div>