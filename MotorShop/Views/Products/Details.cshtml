<script>
    var isReviewsExpanded = true; // Mặc định là mở rộng (xem tất cả + scroll)

    function toggleReviewMode() {
        const reviewList = document.getElementById('reviewList');
        const hiddenItems = document.querySelectorAll('.review-item-hidden');
        const btnText = document.getElementById('btnToggleText');
        const btnIcon = document.getElementById('btnToggleIcon');

        if (isReviewsExpanded) {
            // Chuyển sang chế độ THU GỌN (Chỉ hiện 2 cái)
            hiddenItems.forEach(el => el.classList.add('hidden'));
            
            // Tắt scroll, bỏ giới hạn chiều cao (để nó co lại vừa 2 item)
            reviewList.classList.remove('max-h-[600px]', 'overflow-y-auto', 'custom-scroll');
            
            btnText.innerText = "Xem tất cả";
            btnIcon.classList.remove('fa-chevron-up');
            btnIcon.classList.add('fa-chevron-down');
            
            isReviewsExpanded = false;
        } else {
            // Chuyển sang chế độ MỞ RỘNG (Hiện hết + Scroll)
            hiddenItems.forEach(el => el.classList.remove('hidden'));
            
            // Bật scroll và giới hạn chiều cao
            reviewList.classList.add('max-h-[600px]', 'overflow-y-auto', 'custom-scroll');
            
            btnText.innerText = "Thu gọn";
            btnIcon.classList.remove('fa-chevron-down');
            btnIcon.classList.add('fa-chevron-up');
            
            isReviewsExpanded = true;
        }
    }
</script>

