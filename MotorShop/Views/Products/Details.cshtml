@model MotorShop.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = Model.Product.Name;
}

<div class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
                <div class="aspect-w-4 aspect-h-3 rounded-lg overflow-hidden border mb-4">
                    <img src="@(Model.Product.ImageUrl ?? "https://placehold.co/800x600/e2e8f0/adb5bd?text=MotorShop")" alt="@Model.Product.Name" class="w-full h-full object-cover">
                </div>
            </div>

            <div>
                <a asp-controller="Products" asp-action="Index" asp-route-brandFilter="@Model.Product.BrandId" class="text-sm font-medium text-blue-600 hover:text-blue-800">@Model.Product.Brand.Name</a>
                <h1 class="text-3xl font-bold mt-2 mb-4">@Model.Product.Name</h1>

                <div class="mb-6">
                    @if (Model.Product.OriginalPrice.HasValue)
                    {
                        <div class="flex items-center space-x-3">
                            <span class="text-3xl font-bold text-red-600">@Model.Product.Price.ToString("N0") đ</span>
                            <span class="text-xl text-gray-400 line-through">@Model.Product.OriginalPrice?.ToString("N0") đ</span>
                        </div>
                    }
                    else
                    {
                        <span class="text-3xl font-bold text-red-600">@Model.Product.Price.ToString("N0") đ</span>
                    }
                </div>

                <p class="text-gray-600 mb-6">@Model.Product.Description</p>

                <div class="mb-6">
                    <h3 class="font-semibold mb-3">Thông số kỹ thuật</h3>
                    <table class="w-full text-sm">
                        <tbody>
                            <tr class="border-b">
                                <td class="py-2 font-medium text-gray-500">Thương hiệu</td>
                                <td class="py-2 text-right">@Model.Product.Brand.Name</td>
                            </tr>
                            <tr class="border-b">
                                <td class="py-2 font-medium text-gray-500">Loại xe</td>
                                <td class="py-2 text-right">@Model.Product.Category.Name</td>
                            </tr>
                            <tr class="border-b">
                                <td class="py-2 font-medium text-gray-500">Năm sản xuất</td>
                                <td class="py-2 text-right">@Model.Product.Year</td>
                            </tr>
                            <tr>
                                <td class="py-2 font-medium text-gray-500">Tình trạng</td>
                                <td class="py-2 text-right text-green-600 font-semibold">Còn hàng</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors">
                        <i class="fas fa-shopping-cart mr-2"></i>Thêm vào giỏ hàng
                    </button>
                </form>
            </div>
        </div>

        <div class="mt-20">
            <h2 class="text-2xl font-bold text-center mb-8">Sản phẩm liên quan</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach (var relatedProduct in Model.RelatedProducts)
                {
                    <partial name="_ProductCardPartial" model="relatedProduct" />
                }
            </div>
        </div>
    </div>
</div>