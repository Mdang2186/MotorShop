                {
                    <a href="/Order/History" class="inline-block bg-slate-100 hover:bg-slate-200 text-slate-700 text-xs font-bold px-4 py-2 rounded-lg transition">Đến lịch sử mua hàng</a>
                }
                else
                {
                     <a href="/Account/Login?ReturnUrl=@Context.Request.Path" class="text-[#00D1E4] font-bold hover:underline">Đăng nhập</a> <span>để đánh giá.</span>
                }
            }
        </div>
    </div>

    <div id="reviewContainer">
        @{
             var myReview = ViewBag.MyReview as MotorShop.Models.ProductReview;
             var currentUserId = ViewBag.CurrentUserId as string;
             var otherReviews = Model.Product.Reviews?
                                .Where(r => r.UserId != currentUserId)
                                .OrderByDescending(r => r.CreatedAt).ToList() ?? new List<MotorShop.Models.ProductReview>();
             
             // Gom tất cả review vào 1 list để dễ xử lý index
             var allDisplayReviews = new List<MotorShop.Models.ProductReview>();
             if(myReview != null) allDisplayReviews.Add(myReview);
             allDisplayReviews.AddRange(otherReviews);
        }

        <div class="mb-8 bg-slate-50 p-6 rounded-xl border border-slate-100 transition-all duration-300" id="reviewFormSection">
            @if (ViewBag.CanReview == true)
            {
                <form asp-controller="Products" asp-action="AddReview" method="post" id="frmReview">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@p.Id" />
                    <div class="flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/3">
                            <h4 class="font-bold text-slate-900 mb-1">@(myReview != null ? "Cập nhật đánh giá" : "Đánh giá của bạn")</h4>
                            <div class="flex items-center flex-row-reverse justify-end gap-1 star-rating-group mt-2">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    var isChecked = (myReview != null && myReview.Rating == i) || (myReview == null && i == 5) ? "checked" : "";
                                    <input type="radio" name="rating" id="star-@i" value="@i" class="peer hidden" @isChecked />
                                    <label for="star-@i" class="text-2xl text-slate-300 peer-checked:text-yellow-400 hover:text-yellow-400 cursor-pointer transition"><i class="fa-solid fa-star"></i></label>
                                }
                            </div>
                            <style>.star-rating-group:hover label{color:#facc15}.star-rating-group label:hover~label{color:#facc15}</style>
                        </div>
                        <div class="md:w-2/3 flex flex-col gap-3">
                            <textarea name="comment" id="txtComment" rows="3" class="w-full text-sm rounded-xl border-slate-200 focus:border-[#00D1E4] focus:ring-[#00D1E4]" placeholder="Chất lượng sản phẩm thế nào?">@(myReview?.Comment)</textarea>
                            <button type="submit" class="self-end bg-[#00D1E4] hover:bg-[#00b8c9] text-white px-6 py-2 rounded-lg text-sm font-bold shadow-sm transition">@(myReview != null ? "Cập nhật" : "Gửi đánh giá")</button>
                        </div>
                    </div>
                </form>
            }
