@model MotorShop.ViewModels.ProductIndexViewModel
@using Microsoft.AspNetCore.Mvc.Rendering // Required for SelectListItem

@{
    ViewData["Title"] = "Tất cả sản phẩm";
}

<section class="relative h-80 bg-gray-900 flex items-center justify-center text-white text-center">
    <div class="absolute inset-0">
        <img src="~/images/content/product-banner.jpg"
             class="w-full h-full object-cover opacity-30" alt="Sportbike on a scenic road">
    </div>
    <div class="relative z-10 px-4">
        <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight drop-shadow-lg">
            Tìm Kiếm Chiếc Xe Hoàn Hảo
        </h1>
        <p class="mt-4 text-lg text-gray-200 max-w-2xl mx-auto drop-shadow">
            Sử dụng bộ lọc để tìm chính xác mẫu xe bạn mong muốn từ hàng trăm sản phẩm của chúng tôi.
        </p>
    </div>
</section>

<section class="py-12 bg-gray-100">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-8 items-center">
            @foreach (var brandItem in Model.Brands) @* Use SelectListItem properties *@
            {
                <a asp-controller="Products" asp-action="Index" asp-route-brandFilter="@brandItem.Value" @* Use Value for ID *@
                   class="flex justify-center grayscale opacity-60 hover:opacity-100 hover:grayscale-0 transition duration-300"
                   title="@brandItem.Text">
                    @* Use Text for Name in title *@
                    @{
                        // Create image filename from Text (Name)
                        var imageName = $"{brandItem.Text.ToLower().Replace(" ", "-")}.png";
                    }
                    <img src="~/images/brands/@imageName" alt="@brandItem.Text" class="h-8 object-contain" @* Use Text for Name in alt *@
                         onerror="this.style.display='none'; this.parentElement.innerHTML='<span class=\'text-xs text-gray-400\'>@brandItem.Text</span>'"> @* Fallback text *@
                </a>
            }
        </div>
    </div>
</section>
<div class="bg-gray-50 py-12">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

            <aside class="lg:col-span-1">
                <form asp-controller="Products" asp-action="Index" method="get" class="bg-white p-6 rounded-xl border shadow-sm sticky top-24">
                    <div class="flex justify-between items-center border-b pb-4 mb-6">
                        <h3 class="text-lg font-bold text-gray-800">Bộ lọc</h3>
                        <a asp-action="Index" class="text-sm text-blue-600 hover:underline">Xóa tất cả</a>
                    </div>
                    <div class="space-y-6">
                        <div>
                            <label asp-for="SearchString" class="block text-sm font-semibold text-gray-700 mb-2">Tìm theo tên</label>
                            <div class="relative">
                                <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                                <input asp-for="SearchString" class="w-full border-gray-300 rounded-lg shadow-sm pl-10 focus:ring-blue-500 focus:border-blue-500" placeholder="VD: Vision, Exciter..." />
                            </div>
                        </div>
                        <div>
                            <label asp-for="BrandFilter" class="block text-sm font-semibold text-gray-700 mb-2">Thương hiệu</label>
                            <select asp-for="BrandFilter" asp-items="Model.Brands" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Tất cả thương hiệu</option>
                            </select>
                        </div>
                        <div>
                            <label asp-for="CategoryFilter" class="block text-sm font-semibold text-gray-700 mb-2">Loại xe</label>
                            <select asp-for="CategoryFilter" asp-items="Model.Categories" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Tất cả loại xe</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Khoảng giá (VNĐ)</label>
                            <div class="flex items-center space-x-2">
                                <input asp-for="MinPrice" type="number" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Từ" min="0">
                                <span class="text-gray-400">-</span>
                                <input asp-for="MaxPrice" type="number" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Đến" min="0">
                            </div>
                        </div>
                        <div class="pt-4">
                            <button type="submit" class="w-full text-center py-2.5 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                <i class="fas fa-filter mr-2"></i>Áp dụng
                            </button>
                        </div>
                    </div>
                </form>
            </aside>

            <div class="lg:col-span-3">
                <div class="bg-white p-4 rounded-xl border shadow-sm mb-6 flex flex-col sm:flex-row justify-between items-center gap-4">
                    <p class="text-sm text-gray-600 whitespace-nowrap">
                        Hiển thị <strong>@Model.Products.Count</strong> trên tổng số <strong>@Model.TotalProductCount</strong> sản phẩm
                    </p>
                    <form asp-controller="Products" asp-action="Index" method="get" class="w-full sm:w-auto">
                        <input type="hidden" asp-for="SearchString" />
                        <input type="hidden" asp-for="BrandFilter" />
                        <input type="hidden" asp-for="CategoryFilter" />
                        <input type="hidden" asp-for="MinPrice" />
                        <input type="hidden" asp-for="MaxPrice" />
                        <div class="flex items-center space-x-2">
                            <label for="sortBy" class="text-sm font-medium text-gray-700 whitespace-nowrap">Sắp xếp:</label>
                            <select id="sortBy" asp-for="SortBy" onchange="this.form.submit()" class="border-gray-300 rounded-lg shadow-sm text-sm focus:ring-blue-500 focus:border-blue-500">
                                <option value="newest">Mới nhất</option>
                                <option value="price-low">Giá thấp đến cao</option>
                                <option value="price-high">Giá cao đến thấp</option>
                            </select>
                        </div>
                    </form>
                </div>

                <div id="productsContainer">
                    @if (Model.Products.Any())
                    {
                        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
                            @foreach (var product in Model.Products)
                            {
                                <partial name="_ProductCardPartial" model="product" />
                            }
                        </div>
                        <partial name="_PaginationPartial" model="Model" />
                    }
                    else
                    {
                        <div class="text-center py-20 bg-white border rounded-xl shadow-sm">
                            <div class="flex items-center justify-center h-16 w-16 mx-auto bg-blue-100 rounded-full mb-4">
                                <i class="fas fa-search-minus text-3xl text-blue-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">Không tìm thấy sản phẩm</h3>
                            <p class="text-gray-500 mb-6">Vui lòng thử lại với bộ lọc khác hoặc xóa bộ lọc.</p>
                            <a asp-action="Index" class="inline-block bg-blue-600 text-white px-6 py-2.5 rounded-lg font-semibold hover:bg-blue-700 transition duration-300">
                                Xóa tất cả bộ lọc
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>