@model MotorShop.ViewModels.ProductIndexViewModel

@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="relative h-64 bg-gray-800">
    <img src="https://images.unsplash.com/photo-1625043485356-1370b3c65a7e?fit=crop&w=1500&h=400" class="absolute inset-0 w-full h-full object-cover opacity-40" alt="Motorcycle Banner">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex flex-col justify-center text-white">
        <h1 class="text-4xl font-bold">Khám phá Thế giới Xe máy</h1>
        <p class="mt-2 text-lg max-w-xl">Tìm kiếm chiếc xe hoàn hảo cho mọi hành trình của bạn.</p>
    </div>
</div>

<div class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <aside class="lg:col-span-1">
                <form asp-controller="Products" asp-action="Index" method="get" class="bg-white p-4 rounded-lg border sticky top-20">
                    <h3 class="font-semibold mb-4 border-b pb-2">Bộ lọc</h3>
                    <div class="space-y-6">
                        <div>
                            <label class="font-medium mb-2 block">Thương hiệu</label>
                            <select name="brandFilter" asp-items="Model.Brands" onchange="this.form.submit()" class="w-full border-gray-300 rounded-lg shadow-sm">
                                <option value="">Tất cả thương hiệu</option>
                            </select>
                        </div>
                        <div>
                            <label class="font-medium mb-2 block">Loại xe</label>
                            <select name="categoryFilter" asp-items="Model.Categories" onchange="this.form.submit()" class="w-full border-gray-300 rounded-lg shadow-sm">
                                <option value="">Tất cả loại xe</option>
                            </select>
                        </div>
                        <a asp-controller="Products" asp-action="Index" class="block w-full text-center py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
                            Xóa bộ lọc
                        </a>
                    </div>
                </form>
            </aside>

            <div class="lg:col-span-3">
                <div class="bg-white p-4 rounded-lg border mb-6 flex justify-between items-center">
                    <span class="text-gray-600">Hiển thị @Model.Products.Count sản phẩm</span>
                    <form asp-controller="Products" asp-action="Index" method="get">
                        <input type="hidden" name="brandFilter" value="@Model.BrandFilter" />
                        <input type="hidden" name="categoryFilter" value="@Model.CategoryFilter" />
                        <select name="sortBy" onchange="this.form.submit()" class="border-gray-300 rounded-lg shadow-sm">
                            <option value="newest">Mới nhất</option>
                            <option value="price-low">Giá thấp đến cao</option>
                            <option value="price-high">Giá cao đến thấp</option>
                        </select>
                    </form>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                    @foreach (var product in Model.Products)
                    {
                        <partial name="_ProductCardPartial" model="product" />
                    }
                </div>

                <div class="flex justify-center">
                </div>
            </div>
        </div>
    </div>
</div>